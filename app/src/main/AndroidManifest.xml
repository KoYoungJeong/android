<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tosslab.jandi.app">

    <application
        android:name=".JandiApplication"
        android:allowBackup="false"
        android:icon="@drawable/jandi_symbol_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/JandiTheme"
        tools:replace="android:icon, android:allowBackup">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.mixpanel.android.MPConfig.FlushInterval"
            android:value="1000" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <!-- temp comment for protect ANR (Play-Service-Base : 6.5.87 issue
        <meta-data
            android:name="com.google.android.gms.analytics.globalConfigResource"
            android:resource="@xml/global_tracker" />
        -->
        <activity
            android:name=".ui.signup.account.SignUpActivity_"
            android:label="@string/jandi_signup_title" />

        <activity
            android:name=".ui.signup.verify.SignUpVerifyActivity_"
            android:label="@string/jandi_signup_verify_title"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".ui.intro.IntroActivity_"
            android:label="@string/app_name"
            android:logo="@drawable/jandi_symbol_launcher"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.login.IntroMainActivity_"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysHidden|adjustUnspecified" />

        <activity
            android:name=".ui.account.AccountHomeActivity_"
            android:label="@string/jandi_select_team"
            android:windowSoftInputMode="adjustUnspecified" />

        <activity
            android:name=".ui.team.info.TeamDomainInfoActivity_"
            android:label="@string/team_info"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

        <activity
            android:name=".ui.maintab.MainTabActivity_"
            android:label="@string/app_name" />

        <activity
            android:name=".ui.message.v2.MessageListV2Activity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

        <activity
            android:name=".ui.maintab.file.FileListActivity_"
            android:label="@string/jandi_tab_file" />

        <activity
            android:name=".ui.filedetail.FileDetailActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_file_detail"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

        <activity
            android:name=".ui.fileexplorer.FileExplorerActivity"
            android:label="@string/jandi_title_activity_file_explorer" />

        <activity
            android:name=".ui.settings.main.SettingsActivity_"
            android:label="@string/jandi_settings" />

        <activity
            android:name=".ui.settings.push.SettingPushActivity_"
            android:label="@string/jandi_setting_push" />

        <activity android:name=".ui.settings.privacy.SettingPrivacyActivity_" />

        <activity
            android:name=".ui.profile.modify.view.ModifyProfileActivity_"
            android:label="@string/jandi_profile_actionb" />

        <activity
            android:name=".ui.invites.email.InviteEmailActivity_"
            android:label="@string/menu_entity_invite"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".ui.entities.EntityChooseActivity_"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

        <activity
            android:name=".ui.carousel.CarouselViewerActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/JandiTheme.ActionBarOverlay" />

        <activity
            android:name=".ui.photo.PhotoViewActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/JandiTheme.ActionBarOverlay" />

        <activity android:name=".ui.term.TermActivity_" />

        <activity
            android:name=".ui.maintab.topic.views.create.TopicCreateActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/jandi_create_channel"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

        <activity
            android:name=".ui.message.detail.edit.TopicDescriptionEditActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

        <activity
            android:name=".ui.message.detail.TopicDetailActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity
            android:name=".ui.profile.email.EmailChooseActivity_"
            android:label="@string/jandi_choose_email" />

        <activity
            android:name=".ui.members.MembersListActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/jandi_topic_paricipants" />

        <activity
            android:name=".ui.file.upload.preview.FileUploadPreviewActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name=".ui.album.ImageAlbumActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity
            android:name=".ui.search.main.view.SearchActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/jandi_topic_paricipants" />

        <activity
            android:name=".ui.web.InternalWebActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="jandi-internal-web" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.profile.member.MemberProfileActivity_"
            android:screenOrientation="fullUser"
            android:theme="@style/Jandi.NoTitle" />

        <service android:name="com.parse.PushService" />

        <receiver
            android:name="com.parse.ParsePushBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.parse.push.intent.RECEIVE" />
                <action android:name="com.parse.push.intent.OPEN" />
                <action android:name="com.parse.push.intent.DELETE" />
            </intent-filter>
        </receiver>

        <receiver android:name=".push.receiver.JandiBroadcastReceiver">
            <intent-filter>
                <action android:name="com.tosslab.jandi.app.Push" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.parse.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="${applicationId}" />
            </intent-filter>
        </receiver>

        <activity android:name=".ui.interfaces.JandiInterfaceActivity_">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tosslabjandi" />
            </intent-filter>
        </activity>

        <activity
            android:name=".push.PushInterfaceActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"

            android:theme="@style/JandiTheme.PushIntro" />

        <activity
            android:name="com.tosslab.jandi.app.ui.profile.crop.JandiCropImageActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity
            android:name=".ui.share.MainShareActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>

        </activity>

        <activity
            android:name=".ui.starmention.StarMentionListActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/jandi_starred_stars">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.maintab.topic.views.folderlist.TopicFolderSettingActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/jandi_folder_move_to">

            <intent-filter>
                <action android:name="andorid.intent.action.VIEW" />
                <action android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.maintab.topic.views.joinabletopiclist.JoinableTopicListActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/jandi_browse_other_topics">

            <intent-filter>
                <action android:name="andorid.intent.action.VIEW" />
                <action android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.share.views.ShareSelectRoomActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/jandi_share_to_jandi">

            <intent-filter>
                <action android:name="andorid.intent.action.VIEW" />
                <action android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.share.views.ShareSelectTeamActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/jandi_share_to_jandi">
            <intent-filter>
                <action android:name="andorid.intent.action.VIEW" />
                <action android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.filedetail.views.FileShareActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/jandi_title_cdp_to_be_shared">
            <intent-filter>
                <action android:name="andorid.intent.action.VIEW" />
                <action android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.filedetail.views.FileUnshareActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/jandi_title_cdp_to_be_unshared">
            <intent-filter>
                <action android:name="andorid.intent.action.VIEW" />
                <action android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.passcode.PassCodeActivity_" />
        <activity android:name=".ui.web.PageNotFoundActivity_" />

        <activity
            android:name=".ui.profile.defaultimage.ProfileImageSelectorActivity_"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="andorid.intent.action.VIEW" />
                <action android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".dummy.JandiDummyActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"></activity>

        <activity
            android:name=".ui.entities.disabled.view.DisabledEntityChooseActivity_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/jandi_disabled_members" />

        <service android:name=".services.socket.JandiSocketService" />

        <receiver
            android:name=".services.socket.monitor.SocketServiceStarter"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.tosslab.jandi.app.services.SOCKET_SERVICE_RESTART" />
            </intent-filter>
        </receiver>

        <receiver android:name=".dummy.JandiDummyReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
                <action android:name="android.intent.action.PACKAGE_RESTARTED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".utils.network.NetworkStateBroadcastReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <!-- Google Play Campaign Measurement -->
        <service android:name="com.google.android.gms.analytics.CampaignTrackingService" />

        <receiver
            android:name="com.google.android.gms.analytics.CampaignTrackingReceiver"
            android:exported="true"
            android:permission="android.permission.INSTALL_PACKAGES">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.google.ads.conversiontracking.InstallReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="24a73214fd9000841e8d34390de55bdfd4150668" />

        <!-- Push Intent Service -->
        <service android:name=".push.receiver.JandiPushIntentService" />

        <!-- Log Out Service -->
        <service android:name=".services.SignOutService" />

        <!-- Download Service -->
        <service android:name=".services.download.DownloadService" />

        <receiver android:name=".services.download.receiver.DownloadStopProxyBroadcastReceiver">
            <intent-filter>
                <action android:name="com.tosslab.jandi.app.download.service.proxy.receiver" />
            </intent-filter>
        </receiver>

        <receiver android:name=".services.download.receiver.DownloadStopBroadcastReceiver">
            <intent-filter>
                <action android:name="com.tosslab.jandi.app.download.service.stop" />
            </intent-filter>
        </receiver>

        <!-- Download File Open Receiver -->
        <receiver android:name=".services.download.FileOpenDelegator">
            <intent-filter>
                <action android:name="com.tosslab.jandi.app.FileOpen" />
            </intent-filter>
        </receiver>

    </application>

    // for samsung or sony device to show badge
    <uses-permission android:name="com.sec.android.provider.badge.permission.READ" />
    <uses-permission android:name="com.sec.android.provider.badge.permission.WRITE" />
    <uses-permission android:name="com.sonyericsson.home.permission.BROADCAST_BADGE" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <permission
        android:name="${applicationId}.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="${applicationId}.permission.C2D_MESSAGE" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- for download manager addCompletedDownload-->
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />

</manifest>


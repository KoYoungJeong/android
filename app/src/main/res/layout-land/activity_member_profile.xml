<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/vg_member_profile_img_large"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/iv_member_profile_img_large"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/v_member_profile_img_large_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/jandi_member_profile_img_overlay" />
    </FrameLayout>

    <com.tosslab.jandi.app.views.SwipeExitLayout
        android:id="@+id/vg_swipe_exit_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/vg_member_profile_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/vg_member_profile_bottoms"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_member_profile_img_small"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_above="@+id/tv_member_profile_name"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="30dp" />

                <TextView
                    android:id="@+id/tv_member_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_toLeftOf="@+id/tv_member_profile_description"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_member_profile_description"
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/vg_member_profile_team_info"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_marginBottom="20dp"
                    android:layout_toLeftOf="@+id/btn_member_profile_star"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:maxLines="3"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/v_member_profile_disable"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_above="@id/tv_member_profile_description"
                    android:layout_alignLeft="@id/tv_member_profile_description"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/alert_icon_warning"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/vg_member_profile_team_info"
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_toLeftOf="@+id/btn_member_profile_star"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_member_profile_division"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/jandi_text_light"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_member_profile_position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/jandi_text_light"
                        android:textSize="13dp" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/btn_member_profile_star"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:background="@drawable/jandi_member_profile_star_selector" />
                </FrameLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/vg_member_profile_bottoms"
                android:layout_width="match_parent"
                android:layout_height="@dimen/jandi_member_profile_buttons_height"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_member_profile_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/bg_profile_info"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/jandi_text_light"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_member_profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:background="@drawable/bg_profile_info"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/jandi_text_light"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vg_member_profile_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />

            </LinearLayout>

        </RelativeLayout>

    </com.tosslab.jandi.app.views.SwipeExitLayout>

    <ImageView
        android:id="@+id/btn_member_profile_close"
        android:layout_width="@dimen/jandi_member_profile_btn_close_width"
        android:layout_height="@dimen/jandi_member_profile_btn_close_height"
        android:layout_marginTop="@dimen/jandi_actionbar_overlay_top_margin"
        android:scaleType="center"
        android:src="@drawable/actionbar_icon_remove" />

    <uk.co.senab.photoview.PhotoView
        android:id="@+id/iv_member_profile_img_full"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:scaleType="fitCenter"
        android:visibility="gone" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:drawable="@android:color/holo_red_dark" /> <!-- pressed -->
    <item android:state_selected="true"
        android:drawable="@android:color/holo_green_dark" /> <!-- focused -->
    <item android:state_focused="true"
        android:drawable="@android:color/holo_blue_bright" /> <!-- focused -->
    <item android:drawable="@android:color/transparent" /> <!-- default -->

</selector>
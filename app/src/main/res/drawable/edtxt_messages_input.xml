        <shape>
            <solid android:color="@color/jandi_messages_edittext_bg" />
            <stroke android:width="1dip" android:color="@color/jandi_border_gray" />
            <corners android:radius="3dip" />
            <padding android:left="7dip" android:right="7dip" android:top="7dip" android:bottom="7dip" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/jandi_messages_edittext_bg" />
            <stroke android:width="1dip" android:color="@color/jandi_border_gray" />

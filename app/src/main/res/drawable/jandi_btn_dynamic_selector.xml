<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- INACTIVATE -->
    <item android:state_selected="false" android:state_focused="false" android:state_pressed="false">
        <shape>
            <solid android:color="@color/jandi_inactive_button" />
            <corners android:radius="3dip"/>
            <padding android:bottom="0dp" android:left="0dp"
                android:right="0dp" android:top="0dp" />
        </shape>
    </item>

    <!-- ACTIVATE -->
    <item android:state_selected="true" android:state_focused="false" android:state_pressed="false">
        <shape>
            <solid android:color="@color/jandi_messages_button_bg_active" />
            <corners android:radius="3dip"/>
            <padding android:bottom="0dp" android:left="0dp"
                android:right="0dp" android:top="0dp" />
        </shape>
    </item>

    <!-- CLICK -->
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <solid android:color="@color/jandi_messages_button_bg_normal" />
            <corners android:radius="3dip"/>
            <padding android:bottom="0dp" android:left="0dp"
                android:right="0dp" android:top="0dp" />
        </shape>
    </item>
</selector>
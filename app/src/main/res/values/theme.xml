<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="JandiTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:actionBarStyle">@style/JandiActionBar</item>
        <item name="android:actionBarTabStyle">@style/JandiActionBarTab</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <!-- NoActionBar theme -->
    <style name="JandiTheme.NoActionBar" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
    </style>

    <!-- Application theme for SearchActivity -->
    <style name="JandiSearchTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/JandiActionBar</item>
        <item name="android:actionBarTabStyle">@style/JandiActionBarTab</item>
        <item name="android:spinnerStyle">@style/JandiSpinnerStyle</item>
        <item name="android:spinnerItemStyle">@style/JandiSpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/JandiSpinnerItemStyle</item>
    </style>


    <!-- Actionbar -->
    <style name="JandiActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/jandi_main</item>
        <item name="android:backgroundStacked">@color/jandi_main</item>
        <item name="android:backgroundSplit">@color/jandi_main</item>
    </style>

    <!-- ActionbarTab -->
    <style name="JandiActionBarTab" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_jandi</item>
    </style>

    <!-- Spinner in Actionbar -->
    <style name="JandiSpinnerStyle" parent="@android:style/Widget.Holo.Spinner"/>
    <style name="JandiSpinnerItem" parent="@android:style/Widget.Holo.TextView.SpinnerItem">
        <item name="android:textColor">@color/jandi_text_white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="JandiSpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/jandi_dropdown_menu_text</item>
        <item name="android:background">@color/jandi_file_detail_comments_bg</item>
    </style>


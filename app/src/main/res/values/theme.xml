<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="JandiTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/JandiActionBar</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <!-- Intro 화면은 어둡기 때문에 -->
    <style name="JandiTheme.Intro" parent="android:Theme.DeviceDefault.NoActionBar.Fullscreen">
    </style>
    <!-- NoActionBar theme -->
    <style name="JandiTheme.NoActionBar" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
    </style>

    <!-- Actionbar -->
    <style name="JandiActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/jandi_main</item>
        <item name="android:backgroundStacked">@color/jandi_main</item>
        <item name="android:backgroundSplit">@color/jandi_main</item>
    </style>

    <style name="JandiTheme.ActionBarOverlay" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
    </style>
</resources>
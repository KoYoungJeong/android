<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="JandiTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>

        <item name="autoCompleteTextViewStyle">@style/Jandi.Default.AutoCompleteTextViewStyle</item>

        <item name="colorPrimary">@color/jandi_primary_color</item>
        <item name="colorPrimaryDark">@color/jandi_primary_dark_color</item>
        <item name="colorAccent">@color/jandi_accent_color</item>

        <item name="alertDialogTheme">@style/JandiTheme.AlertDialog</item>
        <item name="dialogTheme">@style/JandiTheme.AlertDialog</item>
        <item name="colorSwitchThumbNormal">@color/jandi_switch_thumb_normal</item>

        <item name="toolbarStyle">@style/Jandi.Default.ActionBar</item>
        <item name="actionBarStyle">@style/Jandi.Default.ActionBar</item>
        <item name="actionMenuTextColor">@color/abc_primary_text_disable_only_material_dark</item>

        <item name="textColorError">@color/design_textinput_error_color_light</item>

    </style>

    <style name="JandiTheme.NavigationDrawer">
    </style>

    <style name="JandiTheme.Widget" />

    <style name="JandiTheme.Widget.TextView" parent="android:Widget.TextView"></style>


    <style name="JandiTheme.AlertDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/jandi_primary_color</item>
        <item name="colorPrimaryDark">@color/jandi_primary_dark_color</item>
        <item name="android:windowBackground">@drawable/popup_bg</item>
        <item name="colorAccent">@color/button_text_color</item>
        <item name="colorControlNormal">@color/rgb_666666</item>
        <item name="android:textColorSecondary">@color/button_text_color_dim</item>
        <item name="android:disabledAlpha">1</item>

        <item name="windowMinWidthMinor">@dimen/jandi_dialog_min_width</item>
        <item name="windowMinWidthMajor">@dimen/jandi_dialog_min_width</item>
        <item name="alertDialogStyle">@style/JandiTheme.AlertDialogStyle</item>


        <!--<item name="buttonBarButtonStyle">@style/JandiButtonBarButtonStyle</item>-->

    </style>

    <style name="JandiTheme.AlertDialogStyle" parent="@style/AlertDialog.AppCompat.Light">
        <item name="singleChoiceItemLayout">@layout/select_dialog_singlechoice</item>
    </style>

    <style name="JandiButtonBarButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textAppearance">@style/JandiDialogButton</item>
    </style>

    <style name="JandiDialogButton" parent="@style/TextAppearance.AppCompat.Button"></style>

    <style name="JandiTheme.AlertDialog.FixWidth.300" parent="JandiTheme.AlertDialog">
        <item name="windowMinWidthMinor">@dimen/jandi_dialog_min_width_2</item>
        <item name="windowMinWidthMajor">@dimen/jandi_dialog_min_width_2</item>
    </style>

    <style name="JandiTheme.AlertDialog.FixWidth.280" parent="JandiTheme.AlertDialog">
        <item name="windowMinWidthMinor">@dimen/jandi_dialog_min_width</item>
        <item name="windowMinWidthMajor">@dimen/jandi_dialog_min_width</item>

        <item name="windowFixedWidthMajor">@dimen/jandi_dialog_min_width</item>
        <item name="windowFixedWidthMinor">@dimen/jandi_dialog_min_width</item>
    </style>

    <!-- Intro 화면은 어둡기 때문에 -->
    <style name="JandiTheme.Intro" parent="android:Theme.DeviceDefault.NoActionBar.Fullscreen"></style>

    <style name="JandiTheme.PushIntro" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowEnableSplitTouch">false</item>

        <item name="colorPrimary">@color/jandi_primary_color</item>
        <item name="colorPrimaryDark">@color/jandi_primary_dark_color</item>
        <item name="colorAccent">@color/jandi_accent_color</item>

    </style>

    <style name="Jandi.Transparent.Dialog" parent="style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/jandi_primary_color</item>
        <item name="colorPrimaryDark">@color/jandi_primary_dark_color</item>
        <item name="colorAccent">@color/jandi_accent_color</item>
    </style>

    <style name="Jandi.NoTitle" parent="JandiTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Actionbar -->
    <style name="JandiActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/jandi_primary_color</item>
        <item name="android:backgroundStacked">@color/jandi_primary_color</item>
        <item name="android:backgroundSplit">@color/jandi_primary_color</item>
    </style>

    <style name="JandiTheme.ActionBarOverlay" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>

        <item name="colorPrimary">@color/backgournd_photo_actionbar</item>
        <item name="colorPrimaryDark">@color/backgournd_photo_actionbar</item>

        <item name="actionBarStyle">@style/ImageCarousel.Toolbar</item>
        <item name="toolbarStyle">@style/ImageCarousel.Toolbar</item>
    </style>

    <style name="JandiTheme.CarouselViewer" parent="@style/Jandi.NoTitle">
        <item name="colorPrimaryDark">@color/jandi_transparent_black_60p</item>
    </style>

    <style name="JandiTheme.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
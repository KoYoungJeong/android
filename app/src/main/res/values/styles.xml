<resources>

    <style name="ProgressWheel" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@drawable/progress_wheel_animation</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PagerSlidingTabStrip">
        <item name="android:background">@color/jandi_tab_background</item>
        <!--<item name="android:textColor">@color/jandi_tab_text</item>-->
        <item name="pstsIndicatorColor">@color/jandi_tab_indicator</item>
        <item name="pstsUnderlineColor">@color/jandi_tab_underline</item>
        <item name="pstsIndicatorHeight">2dp</item>
        <item name="pstsUnderlineHeight">0.5dp</item>
        <item name="pstsDividerColor">@android:color/transparent</item>
        <item name="pstsShouldExpand">true</item>
        <item name="pstsTextAllCaps">false</item>
        <item name="pstsActivateTextColor">@color/jandi_tab_text</item>
        <item name="pstsDeactivateTextColor">@color/jandi_text_light</item>
    </style>
    <style name="JandiStyle"/>
    <style name="JandiStyle.Button.Dynamic" parent="JandiStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/jandi_btn_dynamic_selector</item>
    </style>
    <!-- 파일 리스트의 상단 카테고리 탭 -->
    <style name="JandiFileListCategoryTab"></style>
    <!-- 각 탭의 레이아웃 -->
    <style name="JandiFileListCategoryTab.Layout" parent="JandiFileListCategoryTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>
    <!-- 타이틀 텍스트 -->
    <style name="JandiFileListCategoryTab.Text" parent="JandiFileListCategoryTab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/jandi_text_light</item>
        <item name="android:textSize">13sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 탭과 탭 사이의 경계선 -->
    <style name="JandiFileListCategoryTab.Border" parent="JandiFileListCategoryTab">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/jandi_border</item>
    </style>

    <style name="JandiTutorial"></style>
    <style name="JandiTutorial.Button" parent="JandiTutorial">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/jandi_btn_selector</item>
    </style>
    <style name="JandiTutorial.Button.Dynamic" parent="JandiTutorial">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/jandi_btn_dynamic_selector</item>
    </style>
    <!-- 튜토리얼 페이지 안의 이메일 주소 창 -->
    <style name="JandiTutorial.EditText" parent="JandiTutorial">
        <item name="android:layout_height">42dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/jandi_profile_email</item>
        <item name="android:background">@drawable/jandi_intro_edittext</item>
    </style>
    <style name="JandiTutorial.EditText.Dialog" parent="JandiTutorial">
        <item name="android:layout_height">42dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/jandi_profile_email</item>
        <item name="android:background">@drawable/edtxt_messages_input</item>
    </style>
    <!-- 튜토리얼 페이지의 아래에 위치한 버튼 스타일 -->
    <style name="JandiToturial.Indicator" parent="JandiTutorial">
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/jandi_tutorial_bottom_button</item>
    </style>
    <style name="JandiTutorial.TitleText" parent="JandiTutorial">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/jandi_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="JandiTutorial.Text" parent="JandiTutorial">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/jandi_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">3dip</item>
    </style>
    <style name="JandiSignUp"/>
    <style name="JandiSignUp.EditText" parent="JandiSignUp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="JandiChat"></style>
    <style name="JandiChat.EditText" parent="JandiChat">
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:lines">4</item>
        <item name="android:minLines">1</item>
        <item name="android:scrollbars">none</item>
        <item name="android:background">@drawable/edtxt_messages_input</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
    </style>
    <style name="JandiChat.Button.Dynamic" parent="JandiChat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/jandi_btn_dynamic_selector</item>
    </style>
</resources>

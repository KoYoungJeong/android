<resources>

    <style name="ProgressWheel" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@drawable/progress_wheel_animation</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PagerSlidingTabStrip">
        <item name="android:background">@color/jandi_tab_background</item>
        <!--<item name="android:textColor">@color/jandi_tab_text</item>-->
        <item name="pstsIndicatorColor">@color/jandi_tab_sliding_indicator</item>
        <item name="pstsUnderlineColor">@color/jandi_tab_underline</item>
        <item name="pstsIndicatorHeight">2dp</item>
        <item name="pstsTabPaddingLeftRight">2dp</item>
        <item name="pstsUnderlineHeight">0.5dp</item>
        <item name="pstsDividerColor">@android:color/transparent</item>
        <item name="pstsShouldExpand">true</item>
        <item name="pstsTextAllCaps">false</item>
        <item name="pstsActivateTextColor">@color/jandi_primary_color</item>
        <item name="pstsDeactivateTextColor">@color/jandi_text_light</item>
    </style>

    <style name="JandiStyle"/>

    <style name="JandiStyle.Button.Dynamic" parent="JandiStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@color/text_color_white_all</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/jandi_btn_dynamic_selector_v2</item>
    </style>
    <!-- 파일 리스트의 상단 카테고리 탭 -->
    <style name="JandiFileListCategoryTab"></style>
    <!-- 각 탭의 레이아웃 -->
    <style name="JandiFileListCategoryTab.Layout" parent="JandiFileListCategoryTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>
    <!-- 타이틀 텍스트 -->
    <style name="JandiFileListCategoryTab.Text" parent="JandiFileListCategoryTab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/jandi_text_light</item>
        <item name="android:drawableRight">@drawable/jandi_arrow_down_gray</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 탭과 탭 사이의 경계선 -->
    <style name="JandiFileListCategoryTab.Border" parent="JandiFileListCategoryTab">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/jandi_border_gray</item>
    </style>

    <style name="JandiTutorial"></style>

    <style name="JandiTutorial.Button" parent="JandiTutorial">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/text_color_white_all</item>
        <item name="android:background">@drawable/jandi_btn_selector</item>
        <item name="android:text">@string/jandi_action_start</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="JandiTutorial.Button.Dynamic" parent="JandiTutorial">
        <item name="android:layout_width">84dp</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:textColor">@color/text_color_white_all</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/jandi_btn_dynamic_selector_v2</item>
    </style>
    <!-- 튜토리얼 페이지 안의 이메일 주소 창 -->
    <style name="JandiTutorial.EditText" parent="JandiTutorial">
        <item name="android:layout_height">42dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/jandi_profile_email</item>
        <item name="android:background">@drawable/jandi_intro_edittext</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:textColor">@color/jandi_sign_in_edit_text</item>
        <item name="android:textColorHint">@color/jandi_sign_in_edit_text_hint_bg</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="JandiTutorial.EditText.Dialog" parent="JandiTutorial">
        <item name="android:layout_height">42dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/jandi_profile_email</item>
        <item name="android:background">@drawable/edtxt_messages_input</item>
    </style>
    <!-- 튜토리얼 페이지의 아래에 위치한 버튼 스타일 -->
    <style name="JandiToturial.Indicator" parent="JandiTutorial">
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/jandi_tutorial_bottom_button</item>
    </style>

    <style name="JandiTutorial.TitleText" parent="JandiTutorial">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/jandi_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="JandiTutorial.Text" parent="JandiTutorial">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/jandi_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">3dip</item>
    </style>

    <style name="JandiSignIn.Text" parent="JandiTutorial">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/jandi_sign_in_text</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="JandiSignUp"/>

    <style name="JandiSignUp.EditText" parent="JandiSignUp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="JandiSignUp.Valid" parent="JandiSignUp">
        <item name="android:textColor">@color/jandi_password_strength_weak</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/exclamation_mark</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="JandiSignUp.LabelText" parent="JandiSignUp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/jandi_text_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="JandiSignUp.LabelText.Bold" parent="JandiSignUp.LabelText">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/jandi_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="JandiSignUp.Border.Horizontal" parent="JandiSignUp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/jandi_profile_bg</item>
    </style>

    <style name="JandiChat"></style>

    <style name="JandiChat.EditText" parent="JandiChat">
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:lines">4</item>
        <item name="android:minLines">1</item>
        <item name="android:scrollbars">none</item>
        <item name="android:background">@drawable/edtxt_messages_input</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
    </style>

    <style name="JandiChat.Button.Dynamic" parent="JandiChat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@color/text_color_white_all</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/jandi_btn_dynamic_selector_v2</item>
    </style>

    <style name="JandiTeam"></style>

    <style name="JandiTeam.EditText" parent="JandiTeam">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/jandi_text</item>
        <item name="android:textColorHint">@color/jandi_text_light</item>
        <item name="android:background">@drawable/jandi_team_edit_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textImeMultiLine</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="JandiTeam.TextView.Explain" parent="JandiTeam">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/jandi_text_medium</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="JandiTeam.TextView.Title" parent="JandiTeam">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/jandi_text_medium</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="JandiTopic"/>

    <style name="JandiTopic.Create.TextView.RowLayout" parent="JandiTopic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="JandiTopic.Create.TextView.Title" parent="JandiTopic">
        <item name="android:layout_width">106dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="JandiTopic.Create.TextView.Type" parent="JandiTopic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="JandiTopic.Create.TextView.Edit" parent="JandiTopic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
    </style>


    <style name="JandiMemberProfile"/>

    <style name="JandiMemberProfile.Layout.Default" parent="JandiMemberProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="JandiMemberProfile.Layout.Sub" parent="JandiMemberProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="JandiMemberProfile.TextView.Sub" parent="JandiMemberProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/jandi_text</item>
        <item name="android:textColorHint">@color/jandi_text_light</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="JandiMemberProfile.TextView.Default" parent="JandiMemberProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/jandi_text</item>
        <item name="android:textColorHint">@color/jandi_text_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Jandi.Default.ActionBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <!--<item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>-->
    </style>

</resources>

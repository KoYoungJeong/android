<resources>

    <style name="ProgressWheel" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@drawable/progress_wheel_animation</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PagerSlidingTabStrip">
        <item name="android:background">@color/jandi_tab_background</item>
        <!--<item name="android:textColor">@color/jandi_tab_text</item>-->
        <item name="pstsIndicatorColor">@color/jandi_tab_indicator</item>
        <item name="pstsUnderlineColor">@color/jandi_tab_underline</item>
        <item name="pstsIndicatorHeight">2dp</item>
        <item name="pstsUnderlineHeight">0.5dp</item>
        <item name="pstsDividerColor">@android:color/transparent</item>
        <item name="pstsShouldExpand">true</item>
        <item name="pstsTextAllCaps">false</item>
        <item name="pstsActivateTextColor">@color/jandi_tab_text</item>
        <item name="pstsDeactivateTextColor">@color/jandi_text_light</item>
    </style>
</resources>

<resources>

    <style name="ProgressWheel" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@drawable/progress_wheel_animation</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PagerSlidingTabStrip">
        <item name="android:background">@color/jandi_tab_background</item>
        <!--<item name="android:textColor">@color/jandi_tab_text</item>-->
        <item name="pstsIndicatorColor">@color/jandi_tab_indicator</item>
        <item name="pstsUnderlineColor">@color/jandi_tab_underline</item>
        <item name="pstsIndicatorHeight">2dp</item>
        <item name="pstsUnderlineHeight">0.5dp</item>
        <item name="pstsDividerColor">@android:color/transparent</item>
        <item name="pstsShouldExpand">true</item>
        <item name="pstsTextAllCaps">false</item>
        <item name="pstsActivateTextColor">@color/jandi_tab_text</item>
        <item name="pstsDeactivateTextColor">@color/jandi_text_light</item>
    </style>

    <style name="JandiFileListCategoryTabText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/jandi_text_light</item>
        <item name="android:textSize">13sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="JandiTutorial"></style>
    <style name="JandiTutorial.Button" parent="JandiTutorial">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_send_selector</item>
    </style>
    <!-- 튜토리얼 페이지의 아래에 위치한 버튼 스타일 -->
    <style name="JandiToturial.Indicator" parent="JandiTutorial">
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/jandi_tutorial_bottom_button</item>
    </style>
    <style name="JandiTutorial.TitleText" parent="JandiTutorial">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/jandi_main</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="JandiTutorial.Text" parent="JandiTutorial">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/jandi_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">3dip</item>
    </style>
</resources>

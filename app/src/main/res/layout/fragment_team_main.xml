<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_team_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/jandi_text_white"
        android:overScrollMode="never"
        android:paddingTop="?actionBarSize" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_team_main"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:tabBackground="@color/jandi_primary_color"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="@color/white"
        app:tabTextAppearance="@style/TeamTabTextApprearance"
        app:tabTextColor="@color/jandi_transparent_white_70p" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tabs_team_main"
        android:background="@color/jandi_e5e5e5" />


</RelativeLayout>
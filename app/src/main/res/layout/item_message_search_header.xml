<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_message_search_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="24dp">

    <ProgressBar
        android:id="@+id/progress_message_search_result"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/txt_message_search_result"
        android:layout_alignTop="@+id/txt_message_search_result" />

    <TextView
        android:id="@+id/txt_message_search_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/progress_message_search_result"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="@dimen/jandi_message_search_item_small_txt_size" />
</RelativeLayout>


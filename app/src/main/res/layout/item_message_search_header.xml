<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_message_search_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:background="@color/bg_message_input_panel">

    <ProgressBar
        android:id="@+id/progress_message_search_result"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/txt_message_search_result"
        android:layout_alignTop="@+id/txt_message_search_result"
        android:layout_marginLeft="58dp" />

    <TextView
        android:id="@+id/txt_message_search_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="72dp"
        android:text="Hello 에 대한 100개의 검색 결과가 있습니다."
        android:textSize="@dimen/jandi_message_search_item_small_txt_size" />
</RelativeLayout>


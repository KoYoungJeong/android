<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/jandi_entity_item_height"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/img_entity_listitem_icon"
        android:layout_width="@dimen/jandi_entity_item_icon"
        android:layout_height="@dimen/jandi_entity_item_icon"
        android:layout_marginLeft="@dimen/jandi_entity_item_icon_margin_left"
        android:layout_centerVertical="true"
        android:src="@drawable/jandi_icon_channel"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/jandi_entity_item_title_margin_left">
        <TextView
            android:id="@+id/txt_entity_listitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/jandi_entity_item_title_margin_bottom"
            android:textStyle="bold"
            android:textSize="@dimen/jandi_entity_item_title_font"
            android:textColor="#333333"
            android:text="Channel Name"/>
        <TextView
            android:id="@+id/txt_entity_listitem_additional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_entity_listitem_name"
            android:textSize="@dimen/jandi_entity_item_subtitle_font"
            android:textColor="#666666"
            android:text="0 users"/>
        <TextView
            android:id="@+id/txt_entity_listitem_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/background_badge"
            android:textStyle="bold"
            android:textColor="@color/jandi_text_white"
            android:textSize="@dimen/jandi_entity_badge_font"
            android:text="000"/>
    </RelativeLayout>
</RelativeLayout>
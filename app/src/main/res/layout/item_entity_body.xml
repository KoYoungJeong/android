<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/jandi_entity_item_title_margin_left"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/img_entity_listitem_icon"
        android:layout_width="@dimen/jandi_entity_item_icon"
        android:layout_height="@dimen/jandi_entity_item_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="17dp"
        android:src="@drawable/topiclist_icon_topic" />

    <ImageView
        android:id="@+id/img_entity_listitem_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_entity_listitem_icon"
        android:layout_alignRight="@+id/img_entity_listitem_icon"
        android:layout_marginBottom="-2dp"
        android:layout_marginRight="-2dp"
        android:src="@drawable/icon_team_member_star" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="56dp"
        android:layout_toRightOf="@+id/img_entity_listitem_icon"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/vg_entity_listitem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_entity_listitem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Topic Name"
                android:textColor="@color/jandi_text"
                android:textSize="@dimen/jandi_text_size_large"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_entity_listitem_line_through"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_entity_listitem_name"
                android:layout_alignLeft="@+id/txt_entity_listitem_name"
                android:layout_alignRight="@+id/txt_entity_listitem_name"
                android:layout_alignTop="@+id/txt_entity_listitem_name"
                android:src="@drawable/line_black" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_entity_listitem_user_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vg_entity_listitem_name"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@+id/vg_entity_listitem_name"
            android:layout_marginRight="56dp"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="So Good"
            android:textColor="@color/jandi_text_light"
            android:textSize="@dimen/jandi_text_size_small" />

    </LinearLayout>


    <View
        android:id="@+id/view_entity_listitem_warning"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jandi_entity_item_height"
        android:background="#66ffffff"
        android:visibility="gone" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cb_check_user"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/jandi_more_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ly_file_list_where"
            style="@style/JandiFileListCategoryTab.Layout">

            <TextView
                android:id="@+id/txt_file_list_where"
                style="@style/JandiFileListCategoryTab.Text" />
        </LinearLayout>

        <View style="@style/JandiFileListCategoryTab.Border" />

        <LinearLayout
            android:id="@+id/ly_file_list_whom"
            style="@style/JandiFileListCategoryTab.Layout">

            <TextView
                android:id="@+id/txt_file_list_whom"
                style="@style/JandiFileListCategoryTab.Text" />
        </LinearLayout>

        <View style="@style/JandiFileListCategoryTab.Border" />

        <LinearLayout
            android:id="@+id/ly_file_list_type"
            style="@style/JandiFileListCategoryTab.Layout">

            <TextView
                android:id="@+id/txt_file_list_type"
                style="@style/JandiFileListCategoryTab.Text" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/jandi_file_search_item_divider" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_searched_files"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:divider="@color/jandi_file_search_item_divider"
        android:dividerHeight="0.5dp"
        android:fillViewport="true"
        android:smoothScrollbar="true"
        ptr:ptrPullLabel="@string/jandi_file_list_pull"
        ptr:ptrRefreshLabel="@string/jandi_file_list_refresh"
        ptr:ptrReleaseLabel="@string/jandi_file_list_release" />
</LinearLayout>
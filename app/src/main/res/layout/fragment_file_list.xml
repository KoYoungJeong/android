<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_file_list_header"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/jandi_more_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ly_file_list_where"
            style="@style/JandiFileListCategoryTab.Layout">

            <TextView
                android:id="@+id/txt_file_list_where"
                style="@style/JandiFileListCategoryTab.Text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/jandi_arrow_down_gray" />
        </LinearLayout>

        <View style="@style/JandiFileListCategoryTab.Border" />

        <LinearLayout
            android:id="@+id/ly_file_list_whom"
            style="@style/JandiFileListCategoryTab.Layout">

            <TextView
                android:id="@+id/txt_file_list_whom"
                style="@style/JandiFileListCategoryTab.Text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/jandi_arrow_down_gray" />
        </LinearLayout>

        <View style="@style/JandiFileListCategoryTab.Border" />

        <LinearLayout
            android:id="@+id/ly_file_list_type"
            style="@style/JandiFileListCategoryTab.Layout">

            <TextView
                android:id="@+id/txt_file_list_type"
                style="@style/JandiFileListCategoryTab.Text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/jandi_arrow_down_gray" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_file_list_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/layout_file_list_header"
        android:background="@color/jandi_file_search_item_divider" />

    <ListView
        android:id="@+id/list_searched_files"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_file_list_divider"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:divider="@color/jandi_file_search_item_divider"
        android:dividerHeight="0.5dp"
        android:fillViewport="true"
        android:smoothScrollbar="true" />

    <include
        android:visibility="gone"
        android:id="@+id/layout_file_list_empty"
        layout="@layout/view_search_list_empty" />

    <include
        android:id="@+id/layout_file_list_loading"
        layout="@layout/progress_wheel" />

</RelativeLayout>
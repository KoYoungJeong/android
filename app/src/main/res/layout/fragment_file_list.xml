<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:background="@color/jandi_more_bg">
        <LinearLayout
            android:id="@+id/ly_file_list_where"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">
            <TextView
                android:id="@+id/txt_file_list_where"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/jandi_text_light"
                android:textSize="13sp"
                android:ellipsize="end"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:src="@drawable/jandi_arrow_down_gray"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_file_list_whom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">
            <TextView
                android:id="@+id/txt_file_list_whom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/jandi_text_light"
                android:textSize="13sp"
                android:ellipsize="end"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:src="@drawable/jandi_arrow_down_gray"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_file_list_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:layout_marginRight="16dp" >
            <TextView
                android:id="@+id/txt_file_list_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/jandi_text_light"
                android:textSize="13sp"
                android:ellipsize="end"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:src="@drawable/jandi_arrow_down_gray"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/jandi_file_search_item_divider"/>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_searched_files"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:divider="@color/jandi_file_search_item_divider"
        android:dividerHeight="0.5dp"
        android:smoothScrollbar="true"
        android:fillViewport="true"
        ptr:ptrPullLabel="당겨서 이전 파일"
        ptr:ptrRefreshLabel="놓아서 이전 파일"
        ptr:ptrReleaseLabel="완료" />
</LinearLayout>
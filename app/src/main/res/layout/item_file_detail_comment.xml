<?xml version="1.0" encoding="utf-8"?>
<com.tosslab.jandi.app.views.LongClickableRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_file_detail_comment_user_profile"
        android:layout_width="@dimen/jandi_file_detail_comment_profile_size"
        android:layout_height="@dimen/jandi_file_detail_comment_profile_size"
        android:layout_marginLeft="@dimen/jandi_file_detail_padding_sides"
        android:layout_marginRight="@dimen/jandi_file_detail_comment_profile_margin_right"
        android:layout_marginTop="@dimen/jandi_file_detail_comment_profile_margin_top"
        fresco:placeholderImage="@drawable/profile_img_comment" />

    <TextView
        android:id="@+id/tv_file_detail_comment_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/jandi_file_detail_comment_name_margin_right"
        android:layout_marginTop="@dimen/jandi_file_detail_comment_margin_top"
        android:layout_toRightOf="@+id/iv_file_detail_comment_user_profile"
        android:text="UserName"
        android:textSize="@dimen/jandi_file_detail_comment_name_text"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/iv_entity_listitem_line_through"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_file_detail_comment_user_name"
        android:layout_alignLeft="@+id/tv_file_detail_comment_user_name"
        android:layout_alignRight="@+id/tv_file_detail_comment_user_name"
        android:layout_alignTop="@+id/tv_file_detail_comment_user_name"
        android:src="@drawable/line_gray"/>


    <View
        android:id="@+id/v_entity_listitem_warning"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jandi_entity_item_height"
        android:layout_alignBottom="@+id/iv_file_detail_comment_user_profile"
        android:layout_alignLeft="@+id/iv_file_detail_comment_user_profile"
        android:layout_alignRight="@+id/iv_file_detail_comment_user_profile"
        android:layout_alignTop="@+id/iv_file_detail_comment_user_profile"
        android:background="#99ffffff"
        android:visibility="visible"/>


    <TextView
        android:id="@+id/txt_file_detail_comment_content_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_file_detail_comment_user_name"
        android:layout_below="@+id/tv_file_detail_comment_user_name"
        android:layout_marginRight="@dimen/jandi_file_detail_padding_sides"
        android:layout_marginTop="@dimen/jandi_file_detail_comment_profile_margin_right"
        android:text="HiHi\nThis is Comment"
        android:textColor="@color/jandi_file_detail_comment_text"
        android:textSize="@dimen/jandi_file_detail_comment_date_text"/>

    <View
        android:id="@+id/v_file_detail_comment_anim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/txt_file_detail_comment_content_2"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_topic_selector"/>

</com.tosslab.jandi.app.views.LongClickableRelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_file_detail_comment_user_profile_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:background="@drawable/ic_action_switchteams"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/txt_file_detail_comment_user_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="justin"
            android:textSize="@dimen/messages_user_name"
            />
        <TextView
            android:id="@+id/txt_file_detail_comment_create_date_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_file_detail_comment_user_name_2"
            android:layout_alignBaseline="@id/txt_file_detail_comment_user_name_2"
            android:layout_marginLeft="10dp"
            android:textColor="@color/message_date_text"
            />
        <TextView
            android:id="@+id/txt_file_detail_comment_content_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_file_detail_comment_user_name_2"
            android:layout_marginTop="5dp"
            android:text="HiHi"/>
    </RelativeLayout>

</LinearLayout>
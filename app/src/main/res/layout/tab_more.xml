<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tab_icon_more"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:src="@drawable/jandi_tab_selector_more" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_icon_more"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="2dp"
        android:text="@string/jandi_tab_more"
        android:textColor="@color/jandi_selector_font"
        android:textSize="@dimen/jandi_tab_text_size" />

    <ImageView
        android:id="@+id/tab_badge_more_new"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_alignTop="@+id/tab_icon_more"
        android:layout_toRightOf="@+id/tab_icon_more"
        android:src="@drawable/circle_main_color"
        android:visibility="invisible" />
</RelativeLayout>
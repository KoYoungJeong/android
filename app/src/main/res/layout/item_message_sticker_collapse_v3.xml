<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_message_sticker"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/tv_message_user_name"
        android:layout_marginLeft="@dimen/jandi_messages_content_left_margin"
        android:layout_marginTop="5dp"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_message_sticker"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_message_sticker"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:textColor="#ff00ace9"
            android:textSize="9dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오전 11:30"
            android:textColor="#ff999999"
            android:textSize="10dp" />
    </LinearLayout>


    <View
        android:id="@+id/v_margin"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/iv_message_sticker"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/vg_message_last_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_message_sticker"
        android:visibility="gone">

    </RelativeLayout>

</RelativeLayout>
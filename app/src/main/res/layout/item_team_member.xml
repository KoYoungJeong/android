<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="@color/white"
    android:paddingLeft="16dp">

    <ImageView
        android:id="@+id/iv_team_member_profile"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_team_member_profile"
        android:orientation="vertical"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_team_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/jandi_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_team_member_job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_team_member_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/jandi_text"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/iv_team_member_profile"
        android:background="@color/jandi_team_member_divider" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <RelativeLayout
        android:id="@+id/team_member_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jandi_entity_item_height"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/team_member_icon"
            android:layout_width="@dimen/jandi_entity_item_icon"
            android:layout_height="@dimen/jandi_entity_item_icon"
            android:layout_marginLeft="@dimen/jandi_entity_item_icon_margin_left"
            android:layout_centerVertical="true"
            android:src="@drawable/jandi_icon_channel"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/jandi_entity_item_title_margin_left">
            <TextView
                android:id="@+id/team_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/jandi_entity_item_title_margin_bottom"
                android:textStyle="bold"
                android:textSize="@dimen/jandi_entity_item_title_font"
                android:textColor="@color/jandi_text"
                android:text="Member Name"/>
            <TextView
                android:id="@+id/team_member_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team_member_name"
                android:textSize="@dimen/jandi_entity_item_subtitle_font"
                android:textColor="@color/jandi_text_medium"
                android:text="e-mail"/>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
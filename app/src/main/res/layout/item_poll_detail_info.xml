<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_poll_detail_info_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/jandi_text"
        android:textSize="19sp"/>

    <TextView
        android:id="@+id/tv_poll_detail_info_duedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_poll_detail_info_subject"
        android:layout_marginTop="10dp"
        android:textColor="@drawable/text_color_poll_detail_info_duedate"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/btn_poll_detail_info_participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_poll_detail_info_duedate"
        android:layout_toRightOf="@id/tv_poll_detail_info_duedate"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="â€¢"
            android:textColor="@color/jandi_text_light"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/v_poll_detail_info_participants_icon"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:background="@drawable/icon_poll_detail_info_participants"/>

        <TextView
            android:id="@+id/tv_poll_detail_info_participants_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="fsfafaf"
            android:textColor="@drawable/text_color_poll_detail_info_participants"
            android:textSize="12dp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/v_poll_detail_info_participants_arrow"
            android:layout_width="7dp"
            android:layout_height="12dp"
            android:background="@drawable/poll_member_click"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_poll_detail_info_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_poll_detail_info_participants"
        android:layout_marginTop="2dp"
        android:textColor="@color/jandi_text_light"
        android:textSize="12sp"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_file_explorer_icon"
        android:layout_width="50dp"
        android:layout_height="50dip"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tv_file_explorer_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/img_file_explorer_icon"
        android:singleLine="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_file_explorer_item_childcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_file_explorer_item_name"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/img_file_explorer_icon" />

    <TextView
        android:id="@+id/tv_file_explorer_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_file_explorer_item_name"
        android:layout_marginLeft="5dip" />
</RelativeLayout>

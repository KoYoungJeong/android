<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/img_file_explorer_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:padding="16dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_file_explorer_icon"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_file_explorer_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="11111111"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_file_explorer_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_file_explorer_item_name"
            android:layout_marginRight="16dp"
            android:text="11111111"
            android:textSize="14sp" />
    </RelativeLayout>


</RelativeLayout>

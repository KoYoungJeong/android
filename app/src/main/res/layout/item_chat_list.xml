<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/jandi_entity_item_title_margin_left">

    <View
        android:id="@+id/v_entity_listitem_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_topic_selector"
        android:duplicateParentState="true" />

    <ImageView
        android:id="@+id/iv_entity_listitem_icon"
        android:layout_width="@dimen/jandi_entity_item_icon"
        android:layout_height="@dimen/jandi_entity_item_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="17dp" />

    <ImageView
        android:id="@+id/iv_entity_listitem_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_entity_listitem_icon"
        android:layout_alignRight="@+id/iv_entity_listitem_icon"
        android:layout_marginBottom="-2dp"
        android:layout_marginRight="-2dp"
        android:src="@drawable/icon_team_member_star" />


    <TextView
        android:id="@+id/tv_entity_listitem_user_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/vg_entity_listitem_name"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/vg_entity_listitem_name"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/tv_entity_listitem_badge"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="ahahahaha"
        android:textColor="@color/jandi_text_medium"
        android:textSize="@dimen/jandi_text_size_small" />

    <RelativeLayout
        android:id="@+id/vg_entity_listitem_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/tv_entity_listitem_badge"
        android:layout_toRightOf="@+id/iv_entity_listitem_icon">


        <TextView
            android:id="@+id/tv_entity_listitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Topic Name"
            android:textColor="@color/jandi_text"
            android:textSize="@dimen/jandi_text_size_large"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_entity_listitem_line_through"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_entity_listitem_name"
            android:layout_alignLeft="@+id/tv_entity_listitem_name"
            android:layout_alignRight="@+id/tv_entity_listitem_name"
            android:layout_alignTop="@+id/tv_entity_listitem_name"
            android:src="@drawable/line_black" />

        <ImageView
            android:id="@+id/iv_entity_listitem_warning"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_entity_listitem_line_through"
            android:layout_alignTop="@+id/iv_entity_listitem_line_through"
            android:layout_toRightOf="@+id/iv_entity_listitem_line_through"
            android:scaleType="centerInside"
            android:src="@drawable/alert_icon_warning" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_entity_listitem_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginRight="16dp"
        android:background="@drawable/topiclist_unread_badge"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="9"
        android:textColor="@color/jandi_text_white"
        android:textSize="11sp" />

    <View
        android:id="@+id/v_entity_listitem_warning"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jandi_entity_item_height"
        android:background="#66ffffff"
        android:visibility="gone" />

</RelativeLayout>
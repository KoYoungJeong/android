<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <RelativeLayout
        android:id="@+id/layout_tutorial_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#e8e8e8">

        <ImageView
            android:id="@+id/img_tutorial_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/tutorial_img_01" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/jandi_border_gray" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/layout_tutorial_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="36dp"
                android:paddingLeft="36dp"
                android:paddingRight="36dp"
                android:paddingTop="28dp">

                <TextView
                    android:id="@+id/txt_tutorial_title"
                    style="@style/JandiTutorial.TitleText"
                    android:layout_marginBottom="15dp"
                    android:text="@string/jandi_tutorial_welcome" />

                <TextView
                    android:id="@+id/txt_tutorial_message"
                    style="@style/JandiTutorial.Text"
                    android:layout_marginBottom="18dp"
                    android:text="@string/jandi_tutorial_welcome_message" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>

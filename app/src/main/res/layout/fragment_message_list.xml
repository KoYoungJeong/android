<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:id="@+id/list_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/space_messages_divider"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:smoothScrollbar="true"
        android:transcriptMode="normal" />

    <RelativeLayout
        android:id="@+id/layout_messages_preview_last_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/space_messages_divider"
        android:background="#E5696969"
        android:paddingLeft="@dimen/jandi_messages_padding_left"
        android:paddingRight="@dimen/jandi_messages_padding_right"
        android:paddingTop="5dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img_message_preview_user_profile"
            android:layout_width="@dimen/jandi_messages_profile_size"
            android:layout_height="@dimen/jandi_messages_profile_size"
            android:layout_marginRight="@dimen/jandi_messages_profile_margin_right"
            android:background="@drawable/jandi_profile" />
        <!-- 기본 표시 레이어 -->

        <TextView
            android:id="@+id/txt_message_preview_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/jandi_messages_date_margin_left"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/img_message_preview_user_profile"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="User name"
            android:textColor="@color/white"
            android:textSize="@dimen/jandi_messages_user_name"
            android:textStyle="bold" />
        <!-- 실제 메시지 내용 -->
        <TextView
            android:id="@+id/txt_message_preview_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_message_preview_user_name"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/img_message_preview_user_profile"
            android:singleLine="true"
            android:text="Text"
            android:textColor="@color/white"
            android:textSize="@dimen/jandi_messages_content" />
    </RelativeLayout>


    <!-- Message Input Layout -->
    <View
        android:id="@+id/space_messages_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/ll_messages"
        android:layout_alignWithParentIfMissing="true"
        android:background="@color/jandi_border_gray" />

    <LinearLayout
        android:id="@+id/ll_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/jandi_messages_bottom_bg"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_upload_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/jandi_upload_file" />

        <EditText
            android:id="@+id/et_message"
            style="@style/JandiChat.EditText"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/jandi_message_hint" />

        <Button
            android:id="@+id/btn_send_message"
            style="@style/JandiChat.Button.Dynamic"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/jandi_btn_dynamic_selector_v2"
            android:enabled="false"
            android:text="@string/jandi_message_send" />
    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btn_team_pending_options"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="24dp"
    android:paddingRight="16dp">

    <View
        android:id="@+id/v_team_pending_metaphor"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/bg_circle_red" />

    <TextView
        android:id="@+id/tv_team_pending_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/jandi_text"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:background="@drawable/bg_rect_border_blue"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="초대 됨"
        android:textColor="@color/rgb_00ace9"
        android:textSize="11dp" />

</LinearLayout>

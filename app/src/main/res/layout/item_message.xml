<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_message_item">
    <LinearLayout
        android:id="@+id/ly_message_date_devider"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:id="@+id/txt_message_date_devider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_message_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_message_user_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:background="@drawable/ic_action_switchteams"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 기본 표시 레이어 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_message_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="User name"
                    android:textSize="@dimen/messages_user_name"
                    />
                <TextView
                    android:id="@+id/txt_message_create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_message_user_name"
                    android:layout_alignBaseline="@id/txt_message_user_name"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/message_date_text"
                    android:text="date"
                    />
            </RelativeLayout>
            <!-- 댓글일 경우 표시 레이어 -->
            <LinearLayout
                android:id="@+id/ly_message_commented"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_message_commented"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/file_type"
                    android:text="Commented"/>
            </LinearLayout>
            <!-- 이미지일 경우 -->
            <RelativeLayout
                android:id="@+id/ry_message_image_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/img_message_image_icon_upload"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_upload"/>
                <TextView
                    android:id="@+id/txt_message_image_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_alignBaseline="@id/img_message_image_icon_upload"
                    android:layout_toRightOf="@+id/img_message_image_icon_upload"
                    android:textColor="@color/file_name"
                    android:text="image file name"/>
                <ImageView
                    android:id="@+id/img_message_photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/txt_message_image_file_name"
                    />
                <TextView
                    android:id="@+id/txt_img_file_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_message_photo"
                    android:layout_alignBottom="@+id/img_message_photo"
                    android:layout_margin="8dp"
                    android:textColor="@color/file_type"
                    android:text="file type"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ry_message_common_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- 일반 파일일 경우 -->
                <ImageView
                    android:id="@+id/img_message_common_file"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/tmp_file_icon" />
                <ImageView
                    android:id="@+id/img_message_common_file_icon_upload"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/img_message_common_file"
                    android:src="@drawable/ic_upload"/>
                <TextView
                    android:id="@+id/txt_message_common_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_alignBaseline="@id/img_message_common_file_icon_upload"
                    android:layout_toRightOf="@+id/img_message_common_file_icon_upload"
                    android:textColor="@color/file_name"
                    android:text="file name"/>
                <TextView
                    android:id="@+id/txt_common_file_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_message_common_file"
                    android:layout_alignBottom="@+id/img_message_common_file"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/file_type"
                    android:text="file type"/>
            </RelativeLayout>
            <!-- 실제 내용 (메시지, 댓글) -->
            <TextView
                android:id="@+id/txt_message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Text"/>
        </LinearLayout>

    </LinearLayout>


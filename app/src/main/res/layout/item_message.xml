<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/message_list_selector">

    <LinearLayout
        android:id="@+id/ly_message_date_devider"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:background="@color/jandi_primary_color" />

        <TextView
            android:id="@+id/txt_message_date_devider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When"
            android:textColor="@color/jandi_messages_date_divider"
            android:textSize="@dimen/jandi_messages_date_divider"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_message_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/jandi_messages_padding_left"
        android:paddingRight="@dimen/jandi_messages_padding_right"
        android:paddingTop="5dp"
        android:visibility="visible">
        <!-- 사용자 프로필 사진 -->
        <ImageView
            android:id="@+id/img_message_user_profile"
            android:layout_width="@dimen/jandi_messages_profile_size"
            android:layout_height="@dimen/jandi_messages_profile_size"
            android:layout_marginRight="@dimen/jandi_messages_profile_margin_right"
            android:background="@drawable/profile_img" />
        <!-- 내용 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 기본 표시 레이어 -->
            <LinearLayout
                android:id="@+id/ly_message_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/jandi_messages_default_margin_bottom">

                <TextView
                    android:id="@+id/txt_message_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="User name"
                    android:textColor="@color/jandi_messages_name"
                    android:textSize="@dimen/jandi_messages_user_name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_message_create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:text="AM ??:??"
                    android:textColor="@color/jandi_messages_date"
                    android:textSize="@dimen/jandi_messages_date" />
            </LinearLayout>
            <!-- 댓글일 경우 표시 레이어 -->
            <RelativeLayout
                android:id="@+id/ly_message_commented"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_message_commented_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commented on "
                    android:textColor="@color/jandi_messages_commented"
                    android:textSize="@dimen/jandi_messages_comment" />

                <TextView
                    android:id="@+id/txt_message_commented_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_message_commented_prefix"
                    android:text="justin"
                    android:textColor="@color/jandi_messages_name"
                    android:textSize="@dimen/jandi_messages_comment"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_message_commented_postfix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_message_commented_owner"
                    android:text="'s file"
                    android:textColor="@color/jandi_messages_commented"
                    android:textSize="@dimen/jandi_messages_comment" />

                <TextView
                    android:id="@+id/txt_message_commented_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_message_commented_prefix"
                    android:layout_marginTop="10dp"
                    android:text="File Name"
                    android:textColor="@color/jandi_messages_name"
                    android:textSize="@dimen/jandi_messages_comment_name"
                    android:textStyle="bold" />
                <!-- 실제 댓글 내용 -->
                <TextView
                    android:id="@+id/txt_message_commented_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_message_commented_file_name"
                    android:layout_marginTop="8dp"
                    android:text="Comment"
                    android:textColor="@color/jandi_messages_content"
                    android:textSize="@dimen/jandi_messages_comment" />

                <ImageView
                    android:layout_width="@dimen/jandi_messages_arrow_right_width"
                    android:layout_height="@dimen/jandi_messages_arrow_right_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow_right" />
            </RelativeLayout>
            <!-- 내부에 포함된 댓글일 경우 -->
            <RelativeLayout
                android:id="@+id/ly_message_nested_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/divider_messages_nested_comment"
                    android:layout_width="292dp"
                    android:layout_height="0.5dp"
                    android:background="#999999" />

                <TextView
                    android:id="@+id/txt_message_nested_comment_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divider_messages_nested_comment"
                    android:layout_marginTop="8dp"
                    android:text="User Name"
                    android:textColor="@color/jandi_messages_name"
                    android:textSize="@dimen/jandi_messages_comment_name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_message_commented_create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/txt_message_nested_comment_user_name"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/txt_message_nested_comment_user_name"
                    android:text="AM ??:??"
                    android:textColor="@color/jandi_messages_date"
                    android:textSize="@dimen/jandi_messages_date" />

                <TextView
                    android:id="@+id/txt_message_nested_comment_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_message_nested_comment_user_name"
                    android:layout_marginTop="8dp"
                    android:text="Nested comment"
                    android:textColor="@color/jandi_messages_content"
                    android:textSize="@dimen/jandi_messages_comment" />

                <ImageView
                    android:layout_width="@dimen/jandi_messages_arrow_right_width"
                    android:layout_height="@dimen/jandi_messages_arrow_right_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow_right" />
            </RelativeLayout>
            <!-- 이미지일 경우 -->
            <RelativeLayout
                android:id="@+id/ry_message_image_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_message_photo"
                    android:layout_width="@dimen/jandi_messages_image_size"
                    android:layout_height="@dimen/jandi_messages_image_size"
                    android:layout_marginRight="12dp" />

                <TextView
                    android:id="@+id/txt_message_image_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/img_message_photo"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/img_message_photo"
                    android:text="image file name"
                    android:textColor="@color/jandi_messages_file_name"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_img_file_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_message_image_file_name"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/img_message_photo"
                    android:text="file type"
                    android:textColor="#999999"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="@dimen/jandi_messages_arrow_right_width"
                    android:layout_height="@dimen/jandi_messages_arrow_right_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ry_message_common_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <!-- 일반 파일일 경우 -->
                <ImageView
                    android:id="@+id/img_message_common_file"
                    android:layout_width="@dimen/jandi_messages_file_icon_width"
                    android:layout_height="@dimen/jandi_messages_file_icon_height"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/txt_message_common_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/img_message_common_file"
                    android:text="file name"
                    android:textColor="@color/jandi_messages_file_name"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_common_file_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/txt_message_common_file_name"
                    android:layout_below="@id/txt_message_common_file_name"
                    android:layout_marginTop="4dp"
                    android:text="file type"
                    android:textColor="#999999"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="@dimen/jandi_messages_arrow_right_width"
                    android:layout_height="@dimen/jandi_messages_arrow_right_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow_right" />
            </RelativeLayout>
            <!-- 실제 메시지 내용 -->
            <TextView
                android:id="@+id/txt_message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:textColor="@color/jandi_messages_content"
                android:textSize="@dimen/jandi_messages_content" />
        </LinearLayout>

    </LinearLayout>


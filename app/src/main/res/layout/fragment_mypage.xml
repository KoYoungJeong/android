<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_mypage"
        android:paddingTop="147dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"/>

    <include
        android:id="@+id/vg_mypage_profile"
        layout="@layout/layout_my_profile"/>

    <ProgressBar
        android:id="@+id/progress_mypage_more_loading"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_circle_white"
        android:indeterminate="true"/>

    <ProgressBar
        android:id="@+id/progress_mypage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_refresh_animation"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/v_mypage_empty_mentions"
        android:visibility="gone"
        android:layout_below="@id/vg_mypage_profile"
        android:textSize="16sp"
        android:textColor="@color/jandi_text"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:gravity="center"
        android:text="다른 팀 멤버에게 받은 멘션이 없어요 메세지 창에서 @을 입력해서 멘션해요"
        android:lineSpacingExtra="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_image_album"
        style="@style/Jandi.Default.ActionBar"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/vg_image_album_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/vg_image_album_content_selected"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/toolbar_image_album" />

    <ImageView
        android:id="@+id/iv_image_album_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/layout_search_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_search_category" />

    <RelativeLayout
        android:id="@+id/layout_search_bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?attr/colorPrimary"
        android:padding="8dp"
        android:visibility="visible">

        <AutoCompleteTextView
            android:id="@+id/txt_search_keyword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_round_rect_white"
            android:gravity="center_vertical"
            android:hint="@string/jandi_action_search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingLeft="64dp"
            android:paddingRight="64dp" />

        <ImageView
            android:id="@+id/img_search_backkey"
            android:layout_width="@dimen/jandi_search_default_size"
            android:layout_height="@dimen/jandi_search_default_size"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="13.5dp"
            android:paddingRight="13.5dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_search_back" />

        <ImageView
            android:id="@+id/img_search_mic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_search_voice" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_search_category"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jandi_search_default_size"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_search_tab"
        android:gravity="center_vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/txt_search_category_messages"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/jandi_messages"
            android:textColor="@color/text_color_search_category"
            android:textSize="@dimen/jadi_search_scope_txt_size" />

        <TextView
            android:id="@+id/txt_search_category_files"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/jandi_tab_file"
            android:textColor="@color/text_color_search_category"
            android:textSize="@dimen/jadi_search_scope_txt_size" />
    </LinearLayout>


</RelativeLayout>
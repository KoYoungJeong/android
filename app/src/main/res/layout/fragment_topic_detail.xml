<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jandi_material_grey_50"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/vg_topic_detail_name"
                style="@style/JandiTopicDetail.Layout"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/jandi_title_name"
                    android:textColor="@color/text_color_setting_check_title"
                    android:textSize="@dimen/jandi_text_size_large" />

                <TextView
                    android:id="@+id/tv_topic_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_color_setting_check_summary"
                    android:textSize="@dimen/jandi_text_size_medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/account_home_divide_line" />

            <LinearLayout
                android:id="@+id/vg_topic_detail_description"
                style="@style/JandiTopicDetail.Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:minHeight="104dp"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                android:paddingTop="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/jandi_topic_description"
                    android:textColor="@color/text_color_setting_check_title"
                    android:textSize="@dimen/jandi_text_size_large" />

                <TextView
                    android:id="@+id/tv_topic_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="6dp"
                    android:text="sdfjkhaklsdjf\nskjdfh\nsdfkjh\nasdkj asdadsfh"
                    android:textColor="@color/text_color_setting_check_summary"
                    android:textSize="@dimen/jandi_text_size_medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/account_home_divide_line" />

            <RelativeLayout
                android:id="@+id/vg_topic_detail_member_count"
                style="@style/JandiTopicDetail.Layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_topic_detail_member_count_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_topic_detail_member_count"
                    android:layout_weight="1"
                    android:text="@string/jandi_topic_paricipants"
                    android:textColor="@color/text_color_setting_check_title"
                    android:textSize="@dimen/jandi_text_size_large" />

                <ImageView
                    android:id="@+id/iv_topic_detail_member_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_topic_detail_member_count_title"
                    android:layout_alignTop="@+id/tv_topic_detail_member_count_title"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_topic_detail_member_count"
                    android:cropToPadding="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/setting_icon_member" />

                <TextView
                    android:id="@+id/tv_topic_detail_member_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_topic_detail_member_count_title"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_topic_detail_member_count_title"
                    android:layout_marginLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="112"
                    android:textColor="@color/text_color_setting_check_summary"
                    android:textSize="@dimen/jandi_text_size_medium" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/account_home_divide_line" />

            <LinearLayout
                android:id="@+id/vg_topic_detail_invite"
                style="@style/JandiTopicDetail.Layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jandi_invite_member_to_topic"
                    android:textColor="@color/text_color_setting_check_title"
                    android:textSize="@dimen/jandi_text_size_large" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/account_home_divide_line" />

            <LinearLayout
                android:id="@+id/vg_topic_detail_assign_topic_owner"
                style="@style/JandiTopicDetail.Layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jandi_assign_topic_owner"
                    android:textColor="@color/jandi_text"
                    android:textSize="@dimen/jandi_text_size_large" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/account_home_divide_line" />

            <LinearLayout
                android:id="@+id/vg_topic_detail_set_auto_join"
                style="@style/JandiTopicDetail.Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:minHeight="104dp"
                android:orientation="horizontal"
                android:paddingBottom="24dp"
                android:paddingTop="24dp">

                <LinearLayout
                    android:id="@+id/vg_topic_detail_set_auto_join_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:text="@string/jandi_auto_join_title"
                        android:textColor="@color/text_color_setting_check_title"
                        android:textSize="@dimen/jandi_text_size_large" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:duplicateParentState="true"
                        android:text="@string/jandi_auto_join_explain"
                        android:textColor="@color/text_color_setting_check_summary"
                        android:textSize="@dimen/jandi_text_size_medium" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="51dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:gravity="center">

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switch_topic_detail_set_auto_join"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_topic_detail_set_auto_join"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:text="@string/jandi_auto_join_on"
                        android:textColor="@color/jandi_message_search_item_topic_txt_color_sub"
                        android:textSize="@dimen/jandi_text_size_medium" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/account_home_divide_line" />

            <LinearLayout
                android:id="@+id/vg_topic_detail_set_push"
                style="@style/JandiTopicDetail.Layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_topic_detail_set_push"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/jandi_topic_notification"
                    android:textColor="@color/text_color_setting_check_title"
                    android:textSize="@dimen/jandi_text_size_large" />

                <LinearLayout
                    android:layout_width="51dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:gravity="center">

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switch_topic_detail_set_push"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="true"
                        android:clickable="false" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/account_home_divide_line" />

            <LinearLayout
                android:id="@+id/vg_topic_detail_starred"
                style="@style/JandiTopicDetail.Layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/jandi_starred"
                    android:textColor="@color/text_color_setting_check_title"
                    android:textSize="@dimen/jandi_text_size_large" />

                <ImageView
                    android:id="@+id/iv_topic_detail_starred"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/jandi_topic_starred_status" />

            </LinearLayout>

            <View
                style="@style/JandiTopicDetail.Layout"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/account_home_divide_line" />

            <LinearLayout
                android:id="@+id/vg_topic_detail_leave"
                style="@style/JandiTopicDetail.Layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jandi_topic_leave"
                    android:textColor="@color/text_color_setting_check_title"
                    android:textSize="@dimen/jandi_text_size_large" />

            </LinearLayout>

            <View
                android:id="@+id/view_topic_detail_leve_to_delete"
                style="@style/JandiTopicDetail.Layout"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/account_home_divide_line" />

            <LinearLayout
                android:id="@+id/vg_topic_detail_delete"
                style="@style/JandiTopicDetail.Layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jandi_topic_delete"
                    android:textColor="@color/text_color_setting_check_title"
                    android:textSize="@dimen/jandi_text_size_large" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/vg_topic_detail_default_message"
                style="@style/JandiTopicDetail.Layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/jandi_you_cannot_delete_default_message"
                    android:textColor="@color/jandi_message_search_item_topic_txt_color_sub"
                    android:textSize="@dimen/jandi_text_size_small" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
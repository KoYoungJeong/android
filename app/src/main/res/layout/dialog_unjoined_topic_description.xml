<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="24dp"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:paddingTop="25dp">

    <LinearLayout
        android:id="@+id/vg_unjoin_topic_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_unjoin_topic_desc_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/jandi_entity_item_title_font"
            android:textStyle="bold" />


        <com.tosslab.jandi.app.views.FixedLinearLayout
            android:id="@+id/vg_unjoin_topic_desc_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_unjoin_topic_desc_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/jandi_text_medium"
                android:textSize="@dimen/jandi_text_size_medium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="ãƒ»"
                android:textColor="@color/jandi_text_medium"
                android:textSize="@dimen/jandi_text_size_medium"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/modal_icon_member" />

            <TextView
                android:id="@+id/tv_unjoin_topic_desc_member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textColor="@color/jandi_text_medium"
                android:textSize="@dimen/jandi_text_size_medium"
                android:textStyle="bold" />

        </com.tosslab.jandi.app.views.FixedLinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_unjoin_topic_desc_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vg_unjoin_topic_desc"
        android:layout_marginTop="51dp"
        android:lineSpacingExtra="7dp"
        android:maxLines="6"
        android:minLines="6"
        android:scrollbars="vertical" />

</RelativeLayout>
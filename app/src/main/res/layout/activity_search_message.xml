<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/jandi_file_search_tab_height"
        android:background="@color/jandi_file_search_tab_bg_inactive">
        <LinearLayout
            android:id="@+id/ly_search_message_all_files"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/jandi_file_search_tab_bg_active"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txt_search_message_file_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Everyone"
                android:textColor="@color/jandi_text_white"
                android:textSize="@dimen/jandi_file_search_tab_text"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_search_message_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txt_search_message_user_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Me"
                android:textColor="@color/jandi_text_white"
                android:textSize="@dimen/jandi_file_search_tab_text"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/white"/>
            <ImageView
                android:id="@+id/img_search_message_select_user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/jandi_tabicon_members"/>
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/list_searched_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:divider="@color/jandi_file_search_item_divider"
        android:dividerHeight="0.5dp"
        android:transcriptMode="normal"
        android:fillViewport="true"
        android:background="@color/jandi_file_detail_comments_bg"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/jandi_border"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/jandi_background_default"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_entity_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/jandi_entity_title_left_margin"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="@string/jandi_entity_joined_topic"
        android:textColor="@color/jandi_text_light"
        android:textSize="@dimen/jandi_entity_title_font"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/jandi_tab_underline" />
</LinearLayout>
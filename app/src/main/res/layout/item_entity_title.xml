<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/jandi_entity_title_height"
    android:gravity="center_vertical"
    android:background="@color/jandi_background_default">
    <TextView
        android:id="@+id/txt_entity_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/jandi_entity_title_left_margin"
        android:textStyle="bold"
        android:textSize="@dimen/jandi_entity_title_font"
        android:textColor="@color/jandi_text_light"
        android:text="@string/jandi_entity_joined_topic"/>
</LinearLayout>
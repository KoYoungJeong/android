<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vg_message_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/jandi_messages_padding_left"
        android:paddingRight="@dimen/jandi_messages_padding_right"
        android:paddingTop="10dp"
        android:visibility="visible">
        <!-- 사용자 프로필 사진 -->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_message_user_profile"
            android:layout_width="@dimen/jandi_messages_profile_size"
            android:layout_height="@dimen/jandi_messages_profile_size"
            android:layout_marginRight="@dimen/jandi_messages_profile_margin_right"
            fresco:roundAsCircle="true" />
        <!-- 기본 표시 레이어 -->

        <TextView
            android:id="@+id/tv_message_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/jandi_messages_default_margin_bottom"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iv_message_user_profile"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="User name"
            android:textColor="@color/jandi_messages_name"
            android:textSize="@dimen/jandi_messages_user_name"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_entity_listitem_line_through"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_message_user_name"
            android:layout_alignLeft="@+id/tv_message_user_name"
            android:layout_alignRight="@+id/tv_message_user_name"
            android:layout_alignTop="@+id/tv_message_user_name"
            android:src="@drawable/line_gray" />

        <View
            android:id="@+id/v_entity_listitem_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_message_user_profile"
            android:layout_alignLeft="@+id/iv_message_user_profile"
            android:layout_alignRight="@+id/iv_message_user_profile"
            android:layout_alignTop="@+id/iv_message_user_profile"
            android:background="#99ffffff"
            android:visibility="visible" />

        <!-- 실제 메시지 내용 -->
        <TextView
            android:id="@+id/tv_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message_user_name"
            android:layout_marginRight="14dp"
            android:layout_toRightOf="@+id/iv_message_user_profile"
            android:focusable="false"
            android:lineSpacingExtra="2dip"
            android:text="Text"
            android:textColor="@color/jandi_messages_content"
            android:textSize="@dimen/jandi_messages_content" />

        <View
            android:id="@+id/v_message_sub_menu_connect_color"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/vg_message_sub_menu"
            android:layout_alignLeft="@+id/tv_message_content"
            android:layout_alignTop="@+id/vg_message_sub_menu" />

        <LinearLayout
            android:id="@+id/vg_message_sub_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/v_message_sub_menu_connect_color"
            android:orientation="vertical">

            <include layout="@layout/layout_integration_bot_sub_menu" />

        </LinearLayout>

        <!--
        데이터 명세상 아직 없어서 주석 처리
        <ImageView
            android:id="@+id/iv_message_sub_menu_connect_image"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_alignLeft="@+id/v_message_sub_menu_connect_color"
            android:layout_alignRight="@+id/vg_message_sub_menu"
            android:layout_below="@+id/vg_message_sub_menu" />
-->
        <RelativeLayout
            android:id="@+id/vg_linkpreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_message_content"
            android:layout_below="@+id/vg_message_sub_menu"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp">

            <include layout="@layout/item_message_layout_linkpreview_v2" />
        </RelativeLayout>

    </RelativeLayout>

    <include
        android:id="@+id/vg_message_last_read"
        layout="@layout/item_message_last_read_v2" />

</LinearLayout>
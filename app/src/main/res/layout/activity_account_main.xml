<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        style="@style/Jandi.Default.ActionBar"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/jandi_entity_item_height"
                android:background="@color/jandi_primary_color"
                android:paddingLeft="72dp"
                android:paddingRight="@dimen/jandi_account_home_layout_margin">

                <TextView
                    android:id="@+id/txt_account_main_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jandi_name_in_jandi"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txt_account_main_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/txt_account_main_name_title"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_account_home_name"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/img_account_main_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/txt_account_main_name"
                    android:layout_alignRight="@+id/txt_account_main_name"
                    android:layout_alignTop="@+id/txt_account_main_name"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/account_edit" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/jandi_primary_color"
                android:paddingBottom="18dp"
                android:paddingLeft="72dp"
                android:paddingRight="@dimen/jandi_account_home_layout_margin"
                android:paddingTop="18dp">

                <TextView
                    android:id="@+id/txt_account_main_id_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/jandi_user_default_email"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_account_main_id_explain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/txt_account_main_id_title"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="6dp"
                    android:text="@string/jandi_sign_in_ids_explain"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/ll_account_main_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_account_main_id_explain"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txt_account_main_id_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_account_home_name"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                    <ImageView
                        android:id="@+id/img_account_main_id_down_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/txt_account_main_id_email"
                        android:layout_centerVertical="true"
                        android:src="@drawable/account_arrow_more" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/jandi_account_home_layout_margin"
                android:layout_marginRight="@dimen/jandi_account_home_layout_margin"
                android:layout_marginTop="28dp"
                android:text="@string/jandi_select_team"
                android:textColor="#FF9A9A9A"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_account_main_team_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <ProgressBar
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">

        <LinearLayout
            android:id="@+id/vg_insert_profile_extras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4dp"
                android:text="@string/jandi_profile_extra_introduce"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/profile_text_input_bg"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/jandi_profile_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_department"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/profile_text_input_bg"
                android:gravity="center"
                android:hint="@string/jandi_profile_division_hint"
                android:maxLength="60"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/jandi_profile_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_positon"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/profile_text_input_bg"
                android:gravity="center"
                android:hint="@string/jandi_profile_position_hint"
                android:maxLength="60"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/jandi_profile_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="26dp"
                android:background="@drawable/profile_text_input_bg"
                android:gravity="center"
                android:hint="@string/jandi_profile_phone_number_hint"
                android:inputType="phone"
                android:maxLength="20"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/jandi_profile_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_status_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:background="@drawable/profile_text_input_bg"
                android:gravity="center"
                android:hint="@string/jandi_profile_status_message"
                android:inputType="textMultiLine"
                android:maxLength="60"
                android:maxLines="3"
                android:padding="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/jandi_profile_text"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_bottom_for_insert_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/vg_insert_profile_extras"
            android:layout_marginTop="32dp"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="38dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/btn_profile_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="@string/jandi_browse_team"
                android:textColor="@color/jandi_text_light"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_bottom_for_create_team_previous"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/vg_insert_profile_extras"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="32dp"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="38dp">

            <ImageView
                android:id="@+id/iv_team_create_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/btn_profile_previous" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="@string/jandi_back"
                android:textColor="@color/jandi_text_light"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_bottom_for_create_team_next"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/vg_insert_profile_extras"
            android:layout_marginRight="9dp"
            android:layout_marginTop="32dp"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="38dp">

            <ImageView
                android:id="@+id/iv_team_create_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/btn_profile_next" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="@string/jandi_next"
                android:textColor="@color/jandi_text_light"
                android:textSize="13sp" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_message_item"
    android:orientation="vertical"
    tools:context="com.tosslab.jandi.app.FileDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/layout_search_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:visibility="visible" />

    <ListView
        android:id="@+id/lv_file_detail_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/space_file_detail_divider"
        android:layout_below="@+id/layout_search_bar"
        android:layout_weight="1"
        android:background="@color/jandi_file_detail_comments_bg"
        android:choiceMode="singleChoice"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:paddingBottom="5dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_list_search_members"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/space_file_detail_divider"
        android:layout_below="@+id/layout_search_bar"
        android:layout_weight="1"
        android:background="@color/jandi_file_detail_comments_bg"
        android:choiceMode="singleChoice"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:paddingBottom="5dp"
        android:transcriptMode="alwaysScroll"
        android:visibility="invisible" />


    <RelativeLayout
        android:id="@+id/vg_file_detail_preview_sticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/space_file_detail_divider"
        android:background="@color/jandi_black_89"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_file_detail_preview_sticker_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"/>

        <ImageView
            android:id="@+id/iv_file_detail_preview_sticker_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_sticker_close" />


    </RelativeLayout>

    <View
        android:id="@+id/space_file_detail_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/vg_file_detail_input_comment"
        android:layout_alignWithParentIfMissing="true"
        android:background="@color/jandi_message_input_border" />

    <RelativeLayout
        android:id="@+id/vg_file_detail_input_comment"
        style="@style/JandiChat.Wrapper"
        android:layout_above="@+id/vg_option_space"
        android:layout_alignWithParentIfMissing="true">

        <LinearLayout
            android:id="@+id/vg_message_input_wrapper"
            style="@style/JandiChat.InputWrapper"
            android:layout_toLeftOf="@+id/btn_send_message"
            android:layout_toRightOf="@+id/btn_message_sticker"
            android:orientation="horizontal">

            <com.tosslab.jandi.app.utils.extracomponent.BackpressEditText
                android:id="@+id/et_message"
                style="@style/JandiChat.EditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_message_sticker"
            style="@style/JandiChat.ActionButton.Sticker" />

        <Button
            android:id="@+id/btn_send_message"
            style="@style/JandiChat.Button"
            android:layout_alignBottom="@+id/vg_message_input_wrapper"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/vg_message_input_wrapper"
            android:layout_centerVertical="true"
            android:text="@string/jandi_message_send" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/vg_option_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

</RelativeLayout>

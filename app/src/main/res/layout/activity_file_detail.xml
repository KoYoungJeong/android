<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_message_item"
    tools:context="com.tosslab.toss.app.FileDetailActivity">
    <ListView
        android:id="@+id/list_file_detail_items"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:transcriptMode="normal"
        android:fillViewport="true">
    </ListView>

    <!-- Message Input Layout -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_message_input_panel" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_message_input_panel"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/et_file_detail_comment"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/comment"/>
        <ImageButton
            android:id="@+id/btn_file_detail_send_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:contentDescription="Send"
            android:background="@android:drawable/ic_menu_send"/>
    </LinearLayout>
</LinearLayout>

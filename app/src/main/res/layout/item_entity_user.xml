<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@android:color/transparent">
    <ImageView
        android:id="@+id/main_list_entities_user_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/jandi_icon_channel"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/main_list_entities_user_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:text="Channel Name"/>
        <TextView
            android:id="@+id/main_list_entities_user_nick_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_list_entities_user_name_text"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="0 users"/>
        <TextView
            android:id="@+id/main_list_entities_user_badge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@android:color/holo_red_light"
            android:textColor="@color/jandi_text_white"
            android:textSize="12dp"
            android:text="00"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#999999"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
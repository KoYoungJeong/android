<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_status_change"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:visibility="visible"
        app:navigationIcon="@drawable/actionbar_icon_back"
        app:title="@string/jandi_profile_status_message"/>

    <EditText
        android:id="@+id/et_status_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toolbar_status_change"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:maxLength="60"
        android:minHeight="32dp"
        android:scrollHorizontally="true"
        android:scrollbars="horizontal"
        android:textColor="@color/jandi_text"
        android:textSize="@dimen/jandi_text_size_large"/>


    <View
        android:id="@+id/tv_status_change_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/et_status_change"
        android:layout_alignLeft="@+id/et_status_change"
        android:layout_alignRight="@+id/et_status_change"
        android:layout_marginBottom="8dp"
        android:background="@color/jandi_line_gray"/>

    <TextView
        android:id="@+id/tv_status_change_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_status_change_divider"
        android:layout_below="@+id/tv_status_change_divider"
        android:gravity="center"
        android:text="15/30"/>

</RelativeLayout>
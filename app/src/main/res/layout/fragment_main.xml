<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_login"
    tools:context="com.tosslab.jandi.app.MainActivity">
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_messages"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:transcriptMode="normal"
        android:smoothScrollbar="true"
        android:fillViewport="true"
        ptr:ptrPullLabel="당겨서 이전 메시지"
        ptr:ptrRefreshLabel="놓아서 이전 메시지"
        ptr:ptrReleaseLabel="완료" />

    <!-- Message Input Layout -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/jandi_border" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/jandi_messages_bottom_bg"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/btn_upload_file"
            android:layout_width="@dimen/jandi_messages_upload_botton_width"
            android:layout_height="@dimen/jandi_messages_upload_botton_height"
            android:background="@drawable/jandi_textfield_menu"/>
        <EditText
            android:id="@+id/et_message"
            android:layout_width="0px"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/edtxt_messages_input"
            android:hint="@string/message"/>
        <Button
            android:id="@+id/btn_send_comment"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="6dp"
            android:text="@string/send_message"
            android:textSize="14sp"
            android:textColor="@color/jandi_messages_button_text"
            android:background="@drawable/btn_send_selector"/>
    </LinearLayout>

</LinearLayout>

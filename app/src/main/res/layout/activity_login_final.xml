<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/light_gray">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/txt_login_displayed_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:textColor="@color/jandi_main"
        android:text="User ID"/>
    <EditText
        android:id="@+id/et_login_final_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:singleLine="true"
        android:inputType="textPassword"
        android:background="@drawable/edtxt_messages_input"
        android:hint="@string/jandi_user_password"/>
    <Button
        android:id="@+id/btn_login_final"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="@string/jandi_action_login"
        android:textSize="18sp"
        android:textColor="@color/jandi_messages_button_text"
        android:background="@color/jandi_inactive_button"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>
</LinearLayout>
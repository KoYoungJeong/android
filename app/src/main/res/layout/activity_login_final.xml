<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/light_gray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/jandi_login_message_bg">
        <TextView
            android:id="@+id/txt_login_displayed_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/jandi_main"
            android:text="Team name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:textSize="16dp"
            android:textColor="@color/jandi_text_medium"
            android:text="안녕하세요?\n잔디에 오신 것을 환영합니다"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_login_displayed_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/jandi_main"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:textSize="16dp"
        android:text="User email ID"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp">
        <EditText
            android:id="@+id/et_login_final_password"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:background="@drawable/edtxt_messages_input"
            android:hint="@string/jandi_user_password"/>
        <Button
            android:id="@+id/btn_login_final"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:layout_centerVertical="true"
            android:text="@string/jandi_action_login"
            android:textSize="14sp"
            android:textColor="@color/jandi_messages_button_text"
            android:background="@drawable/btn_inactive"/>
    </RelativeLayout>
</LinearLayout>
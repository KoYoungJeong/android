<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vg_dummy_message_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="46dp"
        android:paddingRight="@dimen/jandi_messages_padding_right"
        android:paddingTop="3dp">

        <RelativeLayout
            android:id="@+id/vg_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.tosslab.jandi.app.views.FrescoImageView
                android:id="@+id/iv_message_sticker"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginRight="63dp"
                android:layout_marginTop="6dp"
                android:focusable="false" />

            <LinearLayout
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_message_sticker"
                android:layout_marginLeft="-59dp"
                android:layout_toRightOf="@id/iv_message_sticker"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_entity_listitem_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="1"
                    android:textColor="#ff00ace9"
                    android:textSize="9dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_message_create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="-2dp"
                    android:text="오전 11:30"
                    android:textColor="#ff999999"
                    android:textSize="10dp" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/v_margin"
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <include layout="@layout/item_message_last_read_v2" />

</LinearLayout>
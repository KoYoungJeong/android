<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vg_message_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="10dp"
        android:paddingLeft="58dp"
        android:paddingTop="8dp">

        <com.tosslab.jandi.app.views.FrescoImageView
            android:id="@+id/iv_message_sticker"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:focusable="false"/>

        <TextView
            android:id="@+id/tv_message_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_message_sticker"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/iv_message_sticker"
            android:text="AM ??:??"
            android:textColor="@color/jandi_messages_date"
            android:textSize="@dimen/jandi_messages_date"/>

        <TextView
            android:id="@+id/tv_entity_listitem_unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_message_create_date"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/tv_message_create_date"
            android:text="10"
            android:textColor="@color/jandi_accent_color"
            android:textSize="@dimen/jandi_text_size_smaller"
            android:textStyle="bold"/>


    </RelativeLayout>

    <include
        android:id="@+id/vg_message_last_read"
        layout="@layout/item_message_last_read_v2"/>

</LinearLayout>
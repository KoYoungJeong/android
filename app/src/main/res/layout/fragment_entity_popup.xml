<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/jandi_dialog_min_width"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_popup_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="20dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp"
        android:text="title"
        android:textColor="@color/message_controller_popup_text_color"
        android:textSize="@dimen/jandi_text_size_larger_3" />

    <TextView
        android:id="@+id/btn_entity_popup_move_folder"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_list_item"
        android:clickable="true"
        android:gravity="left|center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/jandi_folder_move_to"
        android:textColor="@color/message_controller_popup_text_color"
        android:textSize="@dimen/jandi_text_size_large" />

    <TextView
        android:id="@+id/btn_entity_popup_notification"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_list_item"
        android:clickable="true"
        android:gravity="left|center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/jandi_notification_off"
        android:textColor="@color/message_controller_popup_text_color"
        android:textSize="@dimen/jandi_text_size_large" />

    <TextView
        android:id="@+id/btn_entity_popup_starred"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_list_item"
        android:clickable="true"
        android:gravity="left|center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="starred"
        android:textColor="@color/message_controller_popup_text_color"
        android:textSize="@dimen/jandi_text_size_large" />

    <TextView
        android:id="@+id/btn_entity_popup_leave"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_list_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/menu_hide_1_1"
        android:textColor="@color/message_controller_popup_text_color"
        android:textSize="@dimen/jandi_text_size_large" />

    <TextView
        android:id="@+id/btn_entity_popup_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_list_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/jandi_cancel"
        android:textColor="@color/message_controller_popup_text_color"
        android:textSize="@dimen/jandi_text_size_large" />

</LinearLayout>
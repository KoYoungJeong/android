<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vg_message_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="10dp"
        android:paddingLeft="58dp"
        android:paddingRight="@dimen/jandi_messages_padding_right"
        android:paddingTop="8dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:focusable="false"
            android:lineSpacingExtra="2dip"
            android:minHeight="19dp"
            android:text="Text"
            android:textColor="@color/jandi_messages_content"
            android:textSize="@dimen/jandi_messages_content"/>

        <com.tosslab.jandi.app.views.FrescoImageView
            android:id="@+id/iv_message_sticker"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_below="@+id/tv_message_content"
            android:layout_marginRight="14dp"
            android:layout_toRightOf="@+id/iv_message_user_profile"
            android:focusable="false"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_message_send_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_message_sticker"
            android:src="@drawable/icon_message_sending"
            android:layout_toRightOf="@+id/iv_message_sticker" />
    </RelativeLayout>

</LinearLayout>

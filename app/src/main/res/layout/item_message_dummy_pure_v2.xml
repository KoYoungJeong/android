<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/ly_message_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/message_list_selector"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:paddingLeft="@dimen/jandi_messages_padding_left"
    android:paddingRight="@dimen/jandi_messages_padding_right"
    android:visibility="visible">

    <TextView
        android:id="@+id/txt_message_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_message_content"
        android:layout_alignTop="@+id/txt_message_content"
        android:layout_marginLeft="28dp"
        android:text="!"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/jandi_messages_content"
        android:textStyle="bold"/>

    <ProgressBar
        android:id="@+id/progress_message"
        android:layout_width="@dimen/jandi_messages_padding_left"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_message_content"
        android:layout_alignTop="@+id/txt_message_content"
        android:layout_marginLeft="17dp"/>

    <!-- 실제 메시지 내용 -->
    <TextView
        android:id="@+id/txt_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_message_default"
        android:layout_marginLeft="43dp"
        android:text="Text"
        android:textColor="@color/jandi_messages_content"
        android:textSize="@dimen/jandi_messages_content"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vg_dummy_message_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="46dp"
        android:paddingTop="3dp"
        android:visibility="visible">

        <!-- 실제 메시지 내용 -->
        <TextView
            android:id="@+id/tv_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_message_user_name"
            android:layout_marginRight="59dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_message_user_profile"
            android:background="@drawable/bg_round_white_rect_for_message"
            android:focusable="false"
            android:lineSpacingExtra="3dp"
            android:minHeight="24dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="Text"
            android:textColor="@color/dark_gray" />

        <ImageView
            android:id="@+id/iv_message_send_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_message_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="-54dp"
            android:layout_toRightOf="@id/tv_message_content"
            android:src="@drawable/icon_message_sending" />

        <com.tosslab.jandi.app.views.FrescoImageView
            android:id="@+id/iv_message_sticker"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_below="@+id/tv_message_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_message_user_profile"
            android:focusable="false" />

        <ImageView
            android:id="@+id/iv_sticker_send_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_message_sticker"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_message_sticker"
            android:src="@drawable/icon_message_sending" />
    </RelativeLayout>


    <View
        android:id="@+id/v_margin"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/vg_dummy_message_item" />

</RelativeLayout>

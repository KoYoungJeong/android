<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jandi_profile_bg"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:columnCount="2"
        android:rowCount="3"
        android:useDefaultMargins="true">

        <TextView
            style="@style/JandiSignUp.LabelText.Bold"
            android:text="@string/jandi_entity_create_entity_name" />

        <EditText
            android:id="@+id/et_signup_name"
            style="@style/JandiSignUp.EditText"
            android:hint="@string/jandi_entity_create_entity_name"
            android:inputType="text"
            android:textColor="@color/jandi_text" />

        <View
            style="@style/JandiSignUp.Border.Horizontal"
            android:layout_columnSpan="2" />

        <TextView
            style="@style/JandiSignUp.LabelText.Bold"
            android:text="@string/jandi_profile_email" />

        <EditText
            android:id="@+id/et_signup_email"
            style="@style/JandiSignUp.EditText"
            android:hint="@string/jandi_signup_input_email"
            android:inputType="textEmailAddress" />

        <View
            style="@style/JandiSignUp.Border.Horizontal"
            android:layout_columnSpan="2" />

        <TextView
            style="@style/JandiSignUp.LabelText.Bold"
            android:text="@string/jandi_user_password" />

        <EditText
            android:id="@+id/et_signup_password"
            style="@style/JandiSignUp.EditText"
            android:hint="@string/jandi_user_password"
            android:inputType="textPassword" />
    </GridLayout>
    <!-- 패쓰워드 강도 표시 -->
    <com.tosslab.jandi.app.ui.signup.PasswordStrengthBarometerView
        android:id="@+id/ly_password_strength_barometer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/ly_signup_agree_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/jandi_signup_policy_light_selector">
            <TextView
                style="@style/JandiSignUp.LabelText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="fill_horizontal|center_vertical"
                android:gravity="center_vertical"
                android:text="@string/jandi_signup_agree_all" />
            <Button
                android:id="@+id/btn_signup_agree_all"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:duplicateParentState="true"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/jandi_tab_selector_topic"/>
        </LinearLayout>
        <View
            style="@style/JandiSignUp.Border.Horizontal"/>
        <LinearLayout
            android:id="@+id/ly_signup_agree_tos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/jandi_signup_policy_selector">
            <TextView
                style="@style/JandiSignUp.LabelText.Bold"
                android:layout_marginLeft="8dp"
                android:text="@string/jandi_signup_required"
                android:textColor="@color/jandi_text_light"/>
            <TextView
                android:id="@+id/txt_signup_agree_tos"
                style="@style/JandiSignUp.LabelText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_gravity="fill_horizontal|center_vertical"
                android:textColorLink="@color/jandi_text_medium"
                android:text="@string/jandi_signup_agree_tos" />
            <Button
                android:id="@+id/btn_signup_agree_tos"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:duplicateParentState="true"
                android:background="@drawable/jandi_tab_selector_topic"/>
        </LinearLayout>
        <View
            style="@style/JandiSignUp.Border.Horizontal"
            android:layout_marginLeft="24dp"/>
        <LinearLayout
            android:id="@+id/ly_signup_agree_pp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/jandi_signup_policy_selector">
            <TextView
                style="@style/JandiSignUp.LabelText.Bold"
                android:layout_marginLeft="8dp"
                android:text="@string/jandi_signup_required"
                android:textColor="@color/jandi_text_light"/>
            <TextView
                android:id="@+id/txt_signup_agree_pp"
                style="@style/JandiSignUp.LabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_gravity="fill_horizontal"
                android:textColorLink="@color/jandi_text_medium"
                android:text="@string/jandi_signup_agree_pp" />
            <Button
                android:id="@+id/btn_signup_agree_pp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:duplicateParentState="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/jandi_tab_selector_topic"/>
        </LinearLayout>
        <View
            style="@style/JandiSignUp.Border.Horizontal"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_signup_confirm"
        style="@style/JandiStyle.Button.Dynamic"
        android:layout_margin="24dp"
        android:text="@string/jandi_signup_confirm" />
</LinearLayout>
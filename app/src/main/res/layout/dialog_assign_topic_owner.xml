<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/jandi_ask_assign_topic_owner"
        android:textColor="@color/jandi_text"
        android:textSize="@dimen/jandi_text_size_larger_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.tosslab.jandi.app.views.FrescoImageView
            android:id="@+id/iv_assign_topic_owner_profile"
            android:layout_width="@dimen/jandi_entity_item_icon"
            android:layout_height="@dimen/jandi_entity_item_icon"
            android:layout_marginRight="17dp" />

        <TextView
            android:id="@+id/tv_assign_topic_owner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/jandi_text"
            android:textSize="@dimen/jandi_text_size_large"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:text="@string/jandi_assign_topic_owner_desc"
        android:textColor="@color/jandi_text"
        android:textSize="@dimen/jandi_text_size_large"
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
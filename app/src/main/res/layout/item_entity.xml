<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <LinearLayout
        android:id="@+id/main_list_entitiy_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jandi_entity_title_height"
        android:visibility="invisible"
        android:gravity="center_vertical"
        android:background="#f0f0f0"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/main_list_entities_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/jandi_entity_title_left_margin"
            android:textStyle="bold"
            android:textSize="@dimen/jandi_entity_title_font"
            android:textColor="#999999"
            android:text="참여한 채널"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/main_list_entities_real_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jandi_entity_item_height"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/main_list_entities_icon"
            android:layout_width="@dimen/jandi_entity_item_icon"
            android:layout_height="@dimen/jandi_entity_item_icon"
            android:layout_marginLeft="@dimen/jandi_entity_item_icon_margin_left"
            android:layout_centerVertical="true"
            android:src="@drawable/jandi_icon_channel"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/jandi_entity_item_title_margin_left">
            <TextView
                android:id="@+id/main_list_entities_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/jandi_entity_item_title_margin_bottom"
                android:textStyle="bold"
                android:textSize="@dimen/jandi_entity_item_title_font"
                android:textColor="#333333"
                android:text="Channel Name"/>
            <TextView
                android:id="@+id/main_list_entities_cnt_joined_users_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_list_entities_name_text"
                android:textSize="@dimen/jandi_entity_item_subtitle_font"
                android:textColor="#666666"
                android:text="0 users"/>
            <TextView
                android:id="@+id/main_list_entities_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@drawable/background_badge"
                android:textStyle="bold"
                android:textColor="@color/jandi_text_white"
                android:textSize="@dimen/jandi_entity_badge_font"
                android:text="000"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/main_list_entities_unjoined"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#99ffffff"/>
</FrameLayout>
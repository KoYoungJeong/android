<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/img_team_list_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/jandi_team_selector_icon" />

    <TextView
        android:id="@+id/txt_team_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_toLeftOf="@+id/btn_team_list_ignore"
        android:layout_toRightOf="@+id/img_team_list_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Team Name"
        android:textColor="@color/jandi_team_select_pendning_name"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_team_list_ignore"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/btn_team_list_accept"
        android:background="@drawable/btn_line_rect_gray"
        android:text="@string/jandi_team_select_ignore"
        android:textColor="@color/text_color_gray"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_team_list_accept"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/btn_line_rect_green"
        android:text="@string/jandi_team_select_accept"
        android:textColor="@color/text_color_green"
        android:textSize="16dp" />
</RelativeLayout>
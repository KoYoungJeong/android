<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.tosslab.jandi.app.views.FrescoImageView
            android:id="@+id/iv_file_detail_collapse_comment_content"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="@dimen/jandi_file_detail_comment_profile_margin_right" />

        <TextView
            android:id="@+id/tv_file_detail_collapse_comment_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_file_detail_collapse_comment_content"
            android:layout_marginLeft="@dimen/jandi_file_detail_comment_name_margin_right"
            android:layout_toRightOf="@+id/iv_file_detail_collapse_comment_content"
            android:text="Date"
            android:textColor="@color/jandi_file_detail_date"
            android:textSize="@dimen/jandi_file_detail_comment_date_text" />


        <View
            android:id="@+id/v_file_detail_comment_anim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/iv_file_detail_collapse_comment_content"
            android:layout_alignParentTop="true" />


    </RelativeLayout>

</RelativeLayout>
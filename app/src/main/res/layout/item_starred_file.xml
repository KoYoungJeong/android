<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="19dp"
        android:paddingLeft="14.5dp"
        android:paddingRight="16dp"
        android:paddingTop="19dp">

        <ImageView
            android:id="@+id/iv_starred_profile"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true" />

        <View
            android:id="@+id/v_starred_profile_cover"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:background="#66FFFFFF" />

        <TextView
            android:id="@+id/tv_starred_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/tv_starred_date"
            android:layout_toRightOf="@id/iv_starred_profile"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Tee1234432144231431421341234123"
            android:textColor="@color/rgb_333333"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_starred_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="2016/10/11 오전 10:40"
            android:textColor="@color/rgb_999999"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@id/tv_starred_name"
            android:layout_marginLeft="14.5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/iv_starred_profile"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="64dp">

                <View
                    android:id="@+id/v_star_file_round"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_rect_gray" />

                <ImageView
                    android:id="@+id/iv_star_file"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_starred_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:lineSpacingExtra="3dp"
                android:text="1234989082305802391850982310958023918509823109580239185098523091850982310598098521308509823"
                android:textColor="@color/rgb_333333"
                android:textSize="13dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_starred_name"
            android:layout_marginLeft="14.5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/iv_starred_profile"
            android:background="@color/jandi_transparent_black_50p"
            android:paddingBottom="1dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="1000 KB"
            android:textColor="@color/white"
            android:textSize="11dp" />

    </RelativeLayout>


    <View
        android:id="@+id/v_full_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/rgb_e9e9e9"
        android:visibility="gone" />

    <View
        android:id="@+id/v_semi_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="72dp"
        android:background="@color/rgb_e9e9e9"
        android:visibility="gone" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:freco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/vg_linkpreview_thumb"
        android:layout_width="@dimen/jandi_messages_link_preview_thumb_max_width"
        android:layout_height="110dp"
        android:padding="1dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_linkpreview_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            freco:backgroundImage="@color/jandi_linkpreview_thumb_background"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_linkpreview_thumb"
            android:layout_alignLeft="@+id/iv_linkpreview_thumb"
            android:layout_alignRight="@+id/iv_linkpreview_thumb"
            android:layout_alignTop="@+id/iv_linkpreview_thumb"
            android:background="@drawable/bg_rect_gray" />
    </RelativeLayout>

    <View
        android:id="@+id/v_snippet_line"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vg_snippet_summary"
        android:layout_alignTop="@+id/vg_snippet_summary"
        android:layout_below="@id/vg_linkpreview_thumb"
        android:background="@color/jandi_linkpreview_divider" />

    <LinearLayout
        android:id="@+id/vg_snippet_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vg_linkpreview_thumb"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/v_snippet_line"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_linkpreview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Rock Formation Image, Galapagos Islands - National bla blaa bla bla bla blab albalblablblbla"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_linkpreview_domain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="National Geographic"
            android:textColor="@color/jandi_text_light"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_linkpreview_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Sunlight paints a rock formation in the world"
            android:textColor="@android:color/black"
            android:textSize="13dp" />

    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#e8e8e8"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/jandi_img_tutorial_04" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/jandi_border_gray" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="36dp"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:paddingTop="28dp">

            <Button
                android:id="@+id/btn_getting_started"
                style="@style/JandiTutorial.Button"
                android:text="@string/jandi_action_start" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/jandi_border_gray" />

            <TextView
                style="@style/JandiTutorial.Text"
                android:layout_marginBottom="12dp"
                android:text="@string/jandi_have_an_account_already" />

            <EditText
                android:id="@+id/et_intro_login_email"
                style="@style/JandiTutorial.EditText"
                android:layout_width="match_parent" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_intro_login_password"
                    style="@style/JandiTutorial.EditText"
                    android:layout_width="match_parent"
                    android:hint="@string/jandi_user_password"
                    android:inputType="textPassword" />

                <Button
                    android:id="@+id/btn_intro_action_signin_start"
                    style="@style/JandiTutorial.Button.Dynamic"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/jandi_btn_dynamic_selector_v2"
                    android:enabled="false"
                    android:text="@string/jandi_action_login" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_intro_login_forgot_password"
                style="@style/JandiTutorial.Text"
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/jandi_forgot_password" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
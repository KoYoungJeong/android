<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="19dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="18dp">

        <ImageView
            android:id="@+id/iv_starred_profile"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginRight="16dp" />

        <View
            android:id="@+id/v_starred_profile_cover"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginRight="16dp"
            android:background="#66FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_starred_profile"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_starred_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="오후 01:23"
                    android:textColor="@color/jandi_border_gray"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_starred_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@id/tv_time"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Tee"
                    android:textColor="@color/dark_gray"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_starred_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:singleLine="false"
                android:text="HQ had a discussion around this topic and understood the needs.the needs. the needs the needs. the needs "
                android:textColor="@color/dark_gray"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Design_team_HQ"
                    android:textColor="@color/jandi_text_light"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_divide_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="3dp"
                    android:ellipsize="end"
                    android:text="|"
                    android:textColor="@color/jandi_text_light"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_icon_message_content_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/account_icon_upload"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_starred_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="middle"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="몇 글짜까지 들어감.jpg"
                    android:textColor="@color/jandi_text_light"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/v_full_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/rgb_e9e9e9"
        android:visibility="gone" />

    <View
        android:id="@+id/v_semi_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="72dp"
        android:background="@color/rgb_e9e9e9"
        android:visibility="gone" />

</LinearLayout>
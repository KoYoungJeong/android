<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/layout_search_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_main_tab_title"
            style="@style/ToolbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/v_main_tab_metaphor_another_team"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:paddingLeft="8dp"
            android:visibility="gone">

            <View
                android:layout_width="15dp"
                android:layout_height="14dp"
                android:background="@drawable/team_arrow_down_white"/>

            <View
                android:id="@+id/v_main_tab_metaphor_another_team_has_message"
                android:layout_width="15dp"
                android:layout_height="14dp"
                android:alpha="0"
                android:background="@drawable/team_arrow_down_red"/>
        </FrameLayout>

    </android.support.v7.widget.Toolbar>

    <com.tosslab.jandi.app.views.PagerSlidingTabStrip
        android:id="@+id/sliding_tabs"
        style="@style/PagerSlidingTabStrip"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/layout_search_bar"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_main_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sliding_tabs"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sliding_tabs">

        <LinearLayout
            android:id="@+id/vg_main_offline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/jandi_network_disconnect_height"
            android:background="@color/jandi_black_bf"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone">

            <include layout="@layout/layout_network_offline"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/sliding_tabs"
        android:background="@drawable/menu_shadow"/>

    <com.tosslab.jandi.app.views.FloatingActionMenu
        android:id="@+id/vg_fab_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>

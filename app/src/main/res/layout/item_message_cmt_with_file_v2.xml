<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tosslab.jandi.app.views.LongClickableRelativeLayout
        android:id="@+id/vg_message_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/jandi_messages_padding_left"
        android:paddingRight="@dimen/jandi_messages_padding_right"
        android:paddingTop="10dp">
        <!-- 사용자 프로필 사진 -->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_message_user_profile"
            android:layout_width="@dimen/jandi_messages_profile_size"
            android:layout_height="@dimen/jandi_messages_profile_size"
            android:layout_marginRight="@dimen/jandi_messages_profile_margin_right" />
        <!-- 기본 표시 레이어 -->


        <TextView
            android:id="@+id/tv_message_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iv_message_user_profile"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="User name"
            android:textColor="@color/jandi_messages_name"
            android:textSize="@dimen/jandi_messages_user_name"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_entity_listitem_line_through"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_message_user_name"
            android:layout_alignLeft="@+id/tv_message_user_name"
            android:layout_alignRight="@+id/tv_message_user_name"
            android:layout_alignTop="@+id/tv_message_user_name"
            android:src="@drawable/line_gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_message_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_message_user_name"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/tv_message_user_name"
            android:gravity="bottom"
            android:text="AM ??:??"
            android:textColor="@color/jandi_messages_date"
            android:textSize="@dimen/jandi_messages_date" />

        <TextView
            android:id="@+id/tv_entity_listitem_unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_message_create_date"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/tv_message_create_date"
            android:text="10"
            android:textColor="@color/jandi_accent_color"
            android:textSize="@dimen/jandi_text_size_smaller"
            android:textStyle="bold" />


        <View
            android:id="@+id/v_entity_listitem_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_message_user_profile"
            android:layout_alignLeft="@+id/iv_message_user_profile"
            android:layout_alignRight="@+id/iv_message_user_profile"
            android:layout_alignTop="@+id/iv_message_user_profile"
            android:background="#99ffffff"
            android:visibility="visible" />


        <!-- 댓글일 경우 표시 레이어 -->
        <RelativeLayout
            android:id="@+id/vg_message_commented"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message_user_name"
            android:layout_marginRight="9dp"
            android:layout_toRightOf="@+id/iv_message_user_profile">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_message_commented_photo"
                android:layout_width="@dimen/jandi_messages_image_size"
                android:layout_height="@dimen/jandi_messages_image_size"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp" />

            <View
                android:id="@+id/iv_message_commented_photo_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_message_commented_photo"
                android:layout_alignLeft="@+id/iv_message_commented_photo"
                android:layout_alignRight="@+id/iv_message_commented_photo"
                android:layout_alignTop="@+id/iv_message_commented_photo"
                android:layout_centerVertical="true"
                android:background="@drawable/jandi_message_image_frame" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_message_commented_photo"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_message_commented_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:maxLines="2"
                    android:text="justin"
                    android:textColor="@color/jandi_text_light"
                    android:textSize="@dimen/jandi_messages_comment" />


                <TextView
                    android:id="@+id/tv_message_commented_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="File Name"
                    android:textColor="@color/jandi_messages_file_name"
                    android:textSize="@dimen/jandi_text_size_medium"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vg_file_comment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vg_message_commented"
            android:layout_below="@id/vg_message_commented"
            android:layout_marginTop="15dp">

            <!-- 실제 댓글 내용 -->
            <TextView
                android:id="@+id/tv_message_commented_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:focusable="false"
                android:text="Comment"
                android:textColor="@color/jandi_messages_file_content"
                android:textSize="@dimen/jandi_messages_comment" />

            <ImageView
                android:id="@+id/iv_img_file_arrow"
                android:layout_width="@dimen/jandi_messages_arrow_right_width"
                android:layout_height="@dimen/jandi_messages_arrow_right_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_comment_arrow" />
        </RelativeLayout>

    </com.tosslab.jandi.app.views.LongClickableRelativeLayout>

    <include layout="@layout/item_message_divider" />

    <include
        android:id="@+id/vg_message_last_read"
        layout="@layout/item_message_last_read_v2" />

</LinearLayout>
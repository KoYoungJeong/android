<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_list_selector"
                android:descendantFocusability="blocksDescendants"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingBottom="10dp"
                android:paddingLeft="58dp"
                android:paddingRight="@dimen/jandi_messages_padding_right"
                android:paddingTop="5dp">

    <TextView
        android:id="@+id/tv_pure_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:focusable="false"
        android:text="Text"
        android:layout_toLeftOf="@+id/iv_img_file_arrow"
        android:layout_alignParentLeft="true"
        android:textColor="@color/jandi_messages_file_content"
        android:textSize="@dimen/jandi_messages_comment"/>

    <ImageView
        android:id="@+id/iv_img_file_arrow"
        android:layout_width="@dimen/jandi_messages_arrow_right_width"
        android:layout_height="@dimen/jandi_messages_arrow_right_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/jandi_icon_comment_arrow"/>

</RelativeLayout>
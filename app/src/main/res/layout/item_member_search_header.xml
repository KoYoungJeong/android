<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tv_all_delete_button"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/jandi_search_history"
        android:textColor="@color/jandi_border_gray"
        android:textSize="@dimen/jandi_text_size_small" />

    <TextView
        android:id="@+id/tv_member_search_header_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/jandi_delete_all"
        android:textColor="@color/jandi_border_gray"
        android:textSize="@dimen/jandi_text_size_small"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/jandi_color_d9d9d9" />
</RelativeLayout>
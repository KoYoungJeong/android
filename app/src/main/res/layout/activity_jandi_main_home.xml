<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/vg_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:text="@string/jandi_already_has_account"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/jandi_sign_in_block"
            android:textColor="@color/button_text_color"
            android:textSize="12sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_above="@id/vg_bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/btn_blue_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/jandi_action_start"
        android:textColor="@color/white"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="494dp"
        android:layout_above="@id/tv_sign_up_button"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="41" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="29"
            android:src="@drawable/jandi_symbol_intro" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="30" />

    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vg_file_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="false"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/jandi_messages_profile_margin_right"
        android:visibility="visible">

        <!-- 사용자 프로필 사진 -->
        <com.tosslab.jandi.app.views.FrescoImageView
            android:id="@+id/iv_message_user_profile"
            android:layout_width="@dimen/jandi_messages_profile_size"
            android:layout_height="@dimen/jandi_messages_profile_size"
            android:layout_marginRight="@dimen/jandi_messages_profile_margin_right"
            android:clickable="false"
            appp:backgroundImage="@drawable/comment_profile"
            appp:roundAsCircle="true" />

        <com.tosslab.jandi.app.views.viewgroup.MessageWidthRelativeLayout
            android:id="@+id/vg_message_common_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message_user_name"
            android:layout_toRightOf="@+id/iv_message_user_profile"
            android:background="@drawable/bg_message_item_selector"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingBottom="8dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="8dp"
            appp:boundWidth="59dp">

            <com.tosslab.jandi.app.views.FrescoImageView
                android:id="@+id/iv_message_common_file"
                android:layout_width="35dp"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="14dp"
                android:layout_toRightOf="@+id/iv_message_common_file"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_message_common_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:text="jfile name asjhdk lajdlkjhsdlka jfdsafdsafd safdsfsdh flkjahsdf"
                    android:textColor="@color/dark_gray"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_uploader_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_message_common_file_name"
                    android:layout_marginTop="4dp"
                    android:text="tee"
                    android:textColor="#333333"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/tv_file_info_divider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_uploader_name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/tv_uploader_name"
                    android:text="|"
                    android:textColor="#999999"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/tv_common_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_uploader_name"
                    android:layout_toRightOf="@+id/tv_file_info_divider"
                    android:text="file size"
                    android:textColor="#999999"
                    android:textSize="11dp" />

            </RelativeLayout>

        </com.tosslab.jandi.app.views.viewgroup.MessageWidthRelativeLayout>

        <LinearLayout
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/vg_message_common_file"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/vg_message_common_file"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_message_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="1"
                android:textColor="#ff00ace9"
                android:textSize="9dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="-2dp"
                android:text="오전 11:30"
                android:textColor="#ff999999"
                android:textSize="10dp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vg_file_item"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="59dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_comment_bubble_tail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/comment_bubble_tail" />

        <RelativeLayout
            android:id="@+id/vg_read_more"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_below="@+id/iv_comment_bubble_tail"
            android:background="@drawable/bg_message_item_selector"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_comment_read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/comment_more" />

            <TextView
                android:id="@+id/tv_comment_read_more"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_comment_read_more"
                android:gravity="center_vertical"
                android:paddingRight="8dp"
                android:text="3개 댓글 모두 읽기"
                android:textColor="#ff333333"
                android:textSize="11sp"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/jandi_comment_divider" />
        </RelativeLayout>

        <!-- comment -->

        <RelativeLayout
            android:id="@+id/vg_comment_content_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vg_read_more"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/vg_profile_nested_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_message_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="6dp">


                <com.tosslab.jandi.app.views.FrescoImageView
                    android:id="@+id/iv_profile_nested_comment_user_profile"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="2dp"
                    appp:backgroundImage="@color/black"
                    appp:roundAsCircle="true" />

                <TextView
                    android:id="@+id/tv_profile_nested_comment_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="41dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="User Name"
                    android:textColor="@color/jandi_messages_name"
                    android:textSize="11dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_profile_nested_name_line_through"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_profile_nested_comment_user_name"
                    android:layout_alignLeft="@+id/tv_profile_nested_comment_user_name"
                    android:layout_alignRight="@+id/tv_profile_nested_comment_user_name"
                    android:layout_alignTop="@+id/tv_profile_nested_comment_user_name"
                    android:src="@drawable/line_gray" />

                <TextView
                    android:id="@+id/tv_profile_nested_comment_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_profile_nested_comment_user_name"
                    android:layout_marginLeft="41dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="2dp"
                    android:focusable="false"
                    android:lineSpacingExtra="1dp"
                    android:text="Nested comment"
                    android:textColor="@color/jandi_messages_file_content"
                    android:textSize="11dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/vg_profile_nested_comment_sticker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vg_profile_nested_comment"
                android:background="@drawable/bg_message_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="6dp">


                <com.tosslab.jandi.app.views.FrescoImageView
                    android:id="@+id/iv_profile_nested_user_profile_for_sticker"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="2dp"
                    appp:backgroundImage="@color/black"
                    appp:roundAsCircle="true" />

                <TextView
                    android:id="@+id/tv_profile_nested_comment_user_name_for_sticker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="41dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="User Name"
                    android:textColor="@color/jandi_messages_name"
                    android:textSize="11dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_profile_nested_name_line_through_for_sticker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_profile_nested_comment_user_name_for_sticker"
                    android:layout_alignLeft="@+id/tv_profile_nested_comment_user_name_for_sticker"
                    android:layout_alignRight="@+id/tv_profile_nested_comment_user_name_for_sticker"
                    android:layout_alignTop="@+id/tv_profile_nested_comment_user_name_for_sticker"
                    android:src="@drawable/line_gray" />

                <com.tosslab.jandi.app.views.FrescoImageView
                    android:id="@+id/iv_profile_nested_comment_sticker"
                    android:layout_width="107dp"
                    android:layout_height="107dp"
                    android:layout_below="@+id/tv_profile_nested_comment_user_name_for_sticker"
                    android:layout_marginLeft="41dp"
                    android:layout_marginTop="4dp"
                    android:focusable="false" />

                <TextView
                    android:id="@+id/tv_profile_nested_comment_sticker_create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_profile_nested_comment_sticker"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/iv_profile_nested_comment_sticker"
                    android:text="AM ??:??"
                    android:textColor="@color/jandi_messages_date"
                    android:textSize="@dimen/jandi_messages_date" />

                <TextView
                    android:id="@+id/tv_profile_nested_comment_sticker_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_profile_nested_comment_sticker_create_date"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/tv_profile_nested_comment_sticker_create_date"
                    android:text="10"
                    android:textColor="@color/jandi_accent_color"
                    android:textSize="@dimen/jandi_text_size_smaller"
                    android:textStyle="bold" />


            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/v_comment_semi_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignBottom="@+id/vg_comment_content_wrapper"
            android:layout_marginLeft="39dp"
            android:background="@color/jandi_comment_divider" />

        <View
            android:id="@+id/v_comment_normal_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignBottom="@+id/vg_comment_content_wrapper"
            android:background="@color/jandi_comment_divider" />
    </RelativeLayout>

    <View
        android:id="@+id/v_margin"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/vg_file_item"
        android:visibility="gone" />

    <include
        android:id="@+id/vg_message_last_read"
        layout="@layout/item_message_last_read_v2"
        android:visibility="gone" />

</LinearLayout>
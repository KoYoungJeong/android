<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jandi_profile_bg"
    android:padding="16dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp">
        <ImageView
            android:id="@+id/profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/jandi_icon_channel"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="최 영근"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="12dp"
        android:textSize="14sp"
        android:text="기본 정보"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:padding="8dp"
        android:columnCount="4"
        android:rowCount="3"
        android:background="@drawable/jandi_profile_background">
        <TextView
            android:layout_width="80dp"
            android:textSize="16sp"
            android:layout_columnSpan="1"
            android:text="닉네임"/>
        <TextView
            android:id="@+id/profile_user_nickname"
            android:textSize="16sp"
            android:layout_columnSpan="3"
            android:text="justin"/>
        <View
            android:layout_height="0.5dp"
            android:layout_columnSpan="4"
            android:background="@color/jandi_border"/>
        <TextView
            android:textSize="16sp"
            android:text="이메일"/>
        <TextView
            android:id="@+id/profile_user_email"
            android:textSize="16sp"
            android:textColor="@color/jandi_text_light"
            android:text="justin@tosslab.com"/>
    </GridLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="12dp"
        android:textSize="14sp"
        android:text="추가 정보"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:padding="8dp"
        android:columnCount="4"
        android:rowCount="5"
        android:background="@drawable/jandi_profile_background">
        <TextView
            android:layout_width="80dp"
            android:textSize="16sp"
            android:layout_columnSpan="1"
            android:text="전화번호"/>
        <TextView
            android:id="@+id/profile_user_phone_number"
            android:textSize="16sp"
            android:layout_columnSpan="3"
            android:textColor="@color/jandi_text_light"
            android:text="미설정"/>
        <View
            android:layout_height="0.5dp"
            android:layout_columnSpan="4"
            android:background="@color/jandi_border"/>
        <TextView
            android:textSize="16sp"
            android:text="부서"/>
        <TextView
            android:id="@+id/profile_user_division"
            android:textSize="16sp"
            android:textColor="@color/jandi_text_light"
            android:text="미설정"/>
        <View
            android:layout_height="0.5dp"
            android:layout_columnSpan="4"
            android:background="@color/jandi_border"/>
        <TextView
            android:textSize="16sp"
            android:text="직책"/>
        <TextView
            android:id="@+id/profile_user_position"
            android:textSize="16sp"
            android:textColor="@color/jandi_text_light"
            android:text="미설정"/>
    </GridLayout>
</LinearLayout>
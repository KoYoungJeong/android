<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jandi_profile_bg"
    android:orientation="vertical"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/jandi_icon_channel" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/jandi_profile_edit_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="6dp"
            android:text="@string/jandi_profile_edit"
            android:textColor="@color/jandi_text_white" />
    </FrameLayout>

    <TextView
        android:id="@+id/profile_user_realname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="이름"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="@string/jandi_profile_basic_info"
        android:textSize="14sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jandi_profile_background"
        android:columnCount="4"
        android:padding="8dp"
        android:rowCount="3"
        android:useDefaultMargins="true">

        <TextView
            android:layout_width="80dp"
            android:layout_columnSpan="1"
            android:text="@string/jandi_profile_status_message"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profile_user_status_message"
            android:layout_width="0dp"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:hint="@string/jandi_profile_optional"
            android:textColor="@color/jandi_text"
            android:textColorHint="@color/jandi_text_light"
            android:textSize="16sp" />

        <View
            android:layout_height="0.5dp"
            android:layout_columnSpan="4"
            android:background="@color/jandi_border_gray" />

        <TextView
            android:text="@string/jandi_profile_email"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profile_user_email"
            android:text="mail@mail.com"
            android:textColor="@color/jandi_text_light"
            android:textSize="16sp" />
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/jandi_profile_additional_info"
        android:textSize="14sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jandi_profile_background"
        android:columnCount="4"
        android:padding="8dp"
        android:rowCount="5"
        android:useDefaultMargins="true">

        <TextView
            android:layout_width="80dp"
            android:layout_columnSpan="1"
            android:text="@string/jandi_profile_phone_number"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profile_user_phone_number"
            android:layout_columnSpan="3"
            android:hint="@string/jandi_profile_optional"
            android:textColor="@color/jandi_text"
            android:textColorHint="@color/jandi_text_light"
            android:textSize="16sp" />

        <View
            android:layout_height="0.5dp"
            android:layout_columnSpan="4"
            android:background="@color/jandi_border_gray" />

        <TextView
            android:text="@string/jandi_profile_division"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profile_user_division"
            android:hint="@string/jandi_profile_optional"
            android:textColor="@color/jandi_text"
            android:textColorHint="@color/jandi_text_light"
            android:textSize="16sp" />

        <View
            android:layout_height="0.5dp"
            android:layout_columnSpan="4"
            android:background="@color/jandi_border_gray" />

        <TextView
            android:text="@string/jandi_profile_position"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profile_user_position"
            android:hint="@string/jandi_profile_optional"
            android:textColor="@color/jandi_text"
            android:textColorHint="@color/jandi_text_light"
            android:textSize="16sp" />
    </GridLayout>
</LinearLayout>
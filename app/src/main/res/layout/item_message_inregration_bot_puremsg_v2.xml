<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vg_dummy_message_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="46dp">

        <RelativeLayout
            android:id="@+id/vg_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_message_user_name"
            android:layout_toRightOf="@id/iv_message_user_profile">

            <!-- 실제 메시지 내용 -->
            <TextView
                android:id="@+id/tv_message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="59dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_round_white_rect_for_message"
                android:focusable="false"
                android:lineSpacingExtra="3dp"
                android:minHeight="24dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="Text"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/jandi_messages_content" />

            <LinearLayout
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_message_content"
                android:layout_marginLeft="-55dp"
                android:layout_toRightOf="@id/tv_message_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_message_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="1"
                    android:textColor="#ff00ace9"
                    android:textSize="9dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="-2dp"
                    android:text="오전 11:30"
                    android:textColor="#ff999999"
                    android:textSize="10dp" />

            </LinearLayout>

            <View
                android:id="@+id/v_message_sub_menu_connect_color"
                android:layout_width="4dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/vg_message_sub_menu"
                android:layout_alignLeft="@+id/tv_message_content"
                android:layout_alignTop="@+id/vg_message_sub_menu" />

            <LinearLayout
                android:id="@+id/vg_message_sub_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_message_content"
                android:layout_marginRight="59dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/v_message_sub_menu_connect_color"
                android:background="@drawable/bg_round_white_rect_for_message"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp">

                <include layout="@layout/layout_integration_bot_sub_menu" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vg_linkpreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vg_message_content"
            android:layout_below="@+id/vg_message_content"
            android:layout_marginRight="59dp"
            android:layout_marginTop="10dp">

            <include layout="@layout/item_message_layout_linkpreview_v2" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/v_margin"
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <include layout="@layout/item_message_last_read_v2" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vg_dummy_message_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/jandi_messages_profile_margin_right"
        android:visibility="visible">

        <!-- 사용자 프로필 사진 -->
        <com.tosslab.jandi.app.views.FrescoImageView
            android:id="@+id/iv_message_user_profile"
            android:layout_width="@dimen/jandi_messages_profile_size"
            android:layout_height="@dimen/jandi_messages_profile_size"
            android:layout_marginRight="@dimen/jandi_messages_profile_margin_right"
            fresco:backgroundImage="@color/black"
            fresco:roundAsCircle="true" />

        <!-- 기본 표시 레이어 -->
        <TextView
            android:id="@+id/tv_message_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/iv_message_user_profile"
            android:layout_toRightOf="@+id/iv_message_user_profile"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="빠빠빠"
            android:textColor="@color/jandi_messages_name"
            android:textSize="@dimen/jandi_messages_user_name"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_entity_listitem_line_through"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_message_user_name"
            android:layout_alignLeft="@+id/tv_message_user_name"
            android:layout_alignRight="@+id/tv_message_user_name"
            android:layout_alignTop="@+id/tv_message_user_name"
            android:src="@drawable/line_gray" />

        <View
            android:id="@+id/v_entity_listitem_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_message_user_profile"
            android:layout_alignLeft="@+id/iv_message_user_profile"
            android:layout_alignRight="@+id/iv_message_user_profile"
            android:layout_alignTop="@+id/iv_message_user_profile"
            android:background="#99ffffff"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/vg_message_common_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message_user_name"
            android:layout_marginRight="59dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_message_user_profile"
            android:background="@drawable/bg_round_white_rect_for_message"
            android:paddingBottom="8dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="8dp">
            <!-- 일반 파일일 경우 -->


            <ImageView
                android:id="@+id/iv_message_common_file"
                android:layout_width="35dp"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="14dp"
                android:layout_toRightOf="@+id/iv_message_common_file"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_message_common_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:text="jfile name asjhdklajdlkjhsdlkajfdsafdsafdsafdsfsdhflkjahsdf"
                    android:textColor="@color/dark_gray"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_common_file_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_message_common_file_name"
                    android:layout_marginTop="6dp"
                    android:text="file type"
                    android:textColor="#999999"
                    android:textSize="11dp" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/vg_message_common_file"
            android:layout_marginLeft="-55dp"
            android:layout_toRightOf="@id/vg_message_common_file"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_message_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="1"
                android:textColor="#ff00ace9"
                android:textSize="9dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="-2dp"
                android:text="오전 11:30"
                android:textColor="#ff999999"
                android:textSize="10dp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/v_margin"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/vg_dummy_message_item" />

    <include
        android:id="@+id/vg_message_last_read"
        layout="@layout/item_message_last_read_v2" />

</LinearLayout>
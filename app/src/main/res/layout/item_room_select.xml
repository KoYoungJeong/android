<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <View
        android:id="@+id/v_line_use_for_first_no_folder_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"
        android:orientation="vertical"
        android:visibility="gone" />


    <com.tosslab.jandi.app.views.FrescoImageView
        android:id="@+id/iv_room_selector_item_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="32dp"
        fresco:actualImageScaleType="centerInside" />

    <TextView
        android:id="@+id/tv_room_selector_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/iv_room_selector_item_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="sdkfjhlkajsf"
        android:textColor="@color/jandi_text_selector"
        android:textSize="@dimen/jandi_text_size_large" />

    <ImageView
        android:id="@+id/iv_room_selector_item_name_line_through"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_room_selector_item_name"
        android:layout_alignLeft="@+id/tv_room_selector_item_name"
        android:layout_alignRight="@+id/tv_room_selector_item_name"
        android:layout_alignTop="@+id/tv_room_selector_item_name"
        android:src="@drawable/line_black"
        android:visibility="gone" />


    <View
        android:id="@+id/v_room_selector_disabled_warning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66ffffff"
        android:visibility="gone" />

</RelativeLayout>
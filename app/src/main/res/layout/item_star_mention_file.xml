<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/iv_star_mention_profile"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp" />

    <RelativeLayout
        android:id="@+id/rv_star_mention_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/iv_star_mention_profile">

        <TextView
            android:id="@+id/tv_star_mention_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/jandi_star_mention_item_name_content_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_star_file"
            android:layout_width="47dp"
            android:layout_height="56.6dp"
            android:layout_below="@id/tv_star_mention_name"
            android:layout_marginTop="10dp"
            android:src="@drawable/file_icon_audio_dropbox" />

        <TextView
            android:id="@+id/tv_star_mention_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/iv_star_file"
            android:ellipsize="middle"
            android:gravity="center_vertical"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_star_mention_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_star_mention_file_name"
            android:layout_below="@id/tv_star_mention_file_name"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/jandi_star_mention_item_date_text"
            android:textSize="13sp" />

    </RelativeLayout>

</RelativeLayout>
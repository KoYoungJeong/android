<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jandi_dialog_user_profile"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_dialog_input_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jandi_create_team_message"
            android:textColor="@color/jandi_text"
            android:textSize="16dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_dialog_input_text"
        style="@style/JandiTutorial.EditText.Dialog"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btn_dialog_input_confirm"
        style="@style/JandiTutorial.Button.Dynamic"
        android:layout_width="match_parent"
        android:minWidth="300dp"
        android:layout_marginTop="12dp"
        android:text="@string/jandi_action_create_team" />
</LinearLayout>
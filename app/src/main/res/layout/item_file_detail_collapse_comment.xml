<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txt_file_detail_collapse_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="@dimen/jandi_file_detail_padding_rightside"
            android:layout_marginTop="@dimen/jandi_file_detail_comment_message_margin_top"
            android:text="HiHi\nThis is Comment"
            android:textColor="@color/jandi_file_detail_comment_text"
            android:textSize="@dimen/jandi_file_detail_comment_date_text"/>

        <View
            android:id="@+id/v_file_detail_comment_anim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/txt_file_detail_collapse_comment_content"
            android:layout_alignParentTop="@+id/txt_file_detail_collapse_comment_content"/>

    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="4dp"
    android:paddingTop="4dp">

    <TextView
        android:id="@+id/txt_message_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textColor="@color/jandi_messages_date"
        android:textSize="@dimen/jandi_messages_content" />

    <TextView
        android:id="@+id/txt_message_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:text=" "
        android:textColor="@color/jandi_messages_date"
        android:textSize="@dimen/jandi_messages_date" />


</LinearLayout>
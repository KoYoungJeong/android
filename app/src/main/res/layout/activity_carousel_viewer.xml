<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tosslab.jandi.app.views.viewgroup.AdvancedViewPager
        android:id="@+id/vp_carousel"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent">

    </com.tosslab.jandi.app.views.viewgroup.AdvancedViewPager>

    <LinearLayout
        android:id="@+id/vg_carousel_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/jandi_carousel_transparent_45"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/jandi_carousel_bottom_height"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_file_writer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/jandi_carousel_bottom_line_spacing"
                android:layout_marginLeft="@dimen/jandi_carousel_bottom_left"
                android:textColor="@color/jandi_text_white"
                android:textSize="@dimen/jandi_carousel_file_writer_txt" />

            <TextView
                android:id="@+id/tv_file_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/jandi_carousel_bottom_line_spacing_date"
                android:layout_marginLeft="@dimen/jandi_carousel_bottom_left"
                android:textColor="@color/jandi_carousel_file_size_ext_create_time"
                android:textSize="@dimen/jandi_carousel_file_create_time_txt" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_file_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imageview_icon_download" />

        <ImageView
            android:id="@+id/iv_file_datail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imageview_icon_detailview" />

    </LinearLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_carousel"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/jandi_carousel_transparent_45"
        android:visibility="visible"
        app:subtitleTextAppearance="@style/ImageCarousel.SubTitle"
        app:titleTextAppearance="@style/ImageCarousel.Title" />

</RelativeLayout>
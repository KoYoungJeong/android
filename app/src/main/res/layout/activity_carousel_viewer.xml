<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_carousel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/vg_carousel_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/jandi_primary_color_transparent_55"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_file_writer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/jandi_text_white"/>

            <TextView
                android:id="@+id/tv_file_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/jandi_text_white"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_file_download"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/jandi_account_arrow_more"
            />

        <ImageView
            android:id="@+id/iv_file_datail_info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/jandi_actionb_search"
            />

    </LinearLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_carousel"
        style="@style/Jandi.Default.ActionBar"
        android:layout_width="match_parent"
        android:background="@color/jandi_primary_color_transparent_55"
        android:visibility="visible"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:background="@android:color/white"
    android:clickable="true">

    <ImageView
        android:id="@+id/iv_navigation_profile_large"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/v_navigation_profile_large_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_navigation_profile_large"
        android:layout_alignLeft="@+id/iv_navigation_profile_large"
        android:layout_alignRight="@+id/iv_navigation_profile_large"
        android:layout_alignTop="@+id/iv_navigation_profile_large"
        android:background="@color/jandi_transparent_black_40p" />

    <ImageView
        android:id="@+id/iv_navigation_profile"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp" />

    <View
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignBottom="@id/iv_navigation_profile"
        android:layout_alignRight="@id/iv_navigation_profile"
        android:layout_marginBottom="-2dp"
        android:layout_marginRight="-2dp"
        android:background="@drawable/profile_edit" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/iv_navigation_profile"
        android:orientation="vertical">

        <com.tosslab.jandi.app.views.FixedLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_navigation_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_navigation_owner_badge"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="@dimen/jandi_text_size_11sp"
                android:visibility="visible" />

        </com.tosslab.jandi.app.views.FixedLinearLayout>

        <TextView
            android:id="@+id/tv_navigation_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

    </LinearLayout>

</RelativeLayout>
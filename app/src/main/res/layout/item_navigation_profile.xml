<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp">

    <ImageView
        android:id="@+id/iv_navigation_profile_large"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/iv_navigation_profile"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"/>

    <View
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignBottom="@id/iv_navigation_profile"
        android:layout_alignRight="@id/iv_navigation_profile"
        android:background="@drawable/profile_edit"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/iv_navigation_profile"
        android:orientation="vertical">

        <com.tosslab.jandi.app.views.FixedLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_navigation_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/v_navigation_owner_badge"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/bg_owner_badge"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="@android:color/white"
                android:textSize="11dp"
                android:visibility="gone"/>

        </com.tosslab.jandi.app.views.FixedLinearLayout>

        <TextView
            android:id="@+id/tv_navigation_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="12dp"/>

    </LinearLayout>

</RelativeLayout>
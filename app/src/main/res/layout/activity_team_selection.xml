<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/lv_intro_team_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="43"
        android:choiceMode="singleChoice"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/jandi_border" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="57">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="36dp"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:paddingTop="28dp">

            <TextView
                style="@style/JandiTutorial.Text"
                android:layout_marginBottom="12dp"
                android:text="선택한 팀 계정의 비밀번호를 입력하세요" />
            <!--<EditText-->
                <!--android:id="@+id/et_intro_received_email"-->
                <!--style="@style/JandiTutorial.EditText"-->
                <!--android:focusable="false"-->
                <!--android:clickable="false"-->
                <!--android:textColor="@color/jandi_text_medium"-->
                <!--android:layout_width="match_parent" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_intro_signin_password"
                    style="@style/JandiTutorial.EditText"
                    android:inputType="textPassword"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:clickable="false"
                    android:hint="@string/jandi_user_password" />

                <Button
                    android:id="@+id/btn_intro_action_signin"
                    style="@style/JandiTutorial.Button.Dynamic"
                    android:enabled="false"
                    android:text="@string/jandi_action_login"
                    android:layout_marginLeft="4dp"/>

            </LinearLayout>

            <TextView
                style="@style/JandiTutorial.Text"
                android:text="비밀번호를 잊으셨나요?" />

        </LinearLayout>
        <View
            android:id="@+id/view_intro_inactive_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BBFFFFFF"/>
    </RelativeLayout>
</LinearLayout>
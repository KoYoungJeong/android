<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">
    <ImageView
        android:id="@+id/img_searched_file_type"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/tmp_file_icon"/>
    <TextView
        android:id="@+id/txt_searched_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_searched_file_type"
        android:layout_marginLeft="15dp"
        android:text="File Name"
        android:textSize="@dimen/jandi_messages_user_name"/>
    <TextView
        android:id="@+id/txt_searched_file_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/txt_searched_file_name"
        android:layout_alignLeft="@id/txt_searched_file_name"
        android:textColor="@color/file_name"
        android:text="Justin" />
    <TextView
        android:id="@+id/txt_searched_file_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_searched_file_owner_name"
        android:layout_alignBottom="@id/txt_searched_file_owner_name"
        android:textColor="@color/message_date_text"
        android:text="file type"
        />
    <TextView
        android:id="@+id/txt_searched_file_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/txt_searched_file_owner_name"
        android:layout_alignLeft="@id/txt_searched_file_owner_name"
        android:textColor="@color/message_date_text"
        android:text="Date"
        />
    <TextView
        android:id="@+id/txt_searched_file_in_cdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_searched_file_date"
        android:layout_alignBottom="@id/txt_searched_file_date"
        android:textColor="@color/message_date_text"
        android:text="in somewhere"
        />
</RelativeLayout>
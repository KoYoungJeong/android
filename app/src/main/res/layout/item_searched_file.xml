<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/jandi_file_search_item_height"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <com.tosslab.jandi.app.views.FrescoImageView
        android:id="@+id/iv_searched_file_type"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="16.5dp"
        fresco:placeholderImage="@drawable/file_icon_txt"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/jandi_file_search_item_type_icon_margin_left"
        android:layout_marginRight="@dimen/jandi_file_search_item_margin_right">

        <TextView
            android:id="@+id/txt_searched_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="File Name"
            android:textColor="@color/jandi_file_search_item_name_text"
            android:textSize="@dimen/jandi_file_search_item_name_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_searched_file_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_searched_file_type_comment"
            android:layout_alignLeft="@id/txt_searched_file_name"
            android:layout_alignTop="@+id/txt_searched_file_type_comment"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="file type"
            android:textColor="@color/jandi_file_search_item_type_text"
            android:textSize="@dimen/jandi_file_search_item_type_text" />

        <ImageView
            android:id="@+id/img_searched_file_type_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_searched_file_type_comment"
            android:layout_alignTop="@+id/txt_searched_file_type_comment"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/txt_searched_file_type"
            android:scaleType="centerInside"
            android:src="@drawable/file_icon_comment" />

        <TextView
            android:id="@+id/txt_searched_file_type_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_searched_file_name"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="@dimen/jandi_file_search_item_text_margin"
            android:layout_toRightOf="@+id/img_searched_file_type_comment"
            android:src="@drawable/file_icon_comment"
            android:text="3"
            android:textColor="@color/jandi_file_search_item_type_text"
            android:textSize="@dimen/jandi_file_search_item_date_text" />

        <TextView
            android:id="@+id/txt_searched_file_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txt_searched_file_name"
            android:layout_below="@id/txt_searched_file_type"
            android:layout_marginTop="@dimen/jandi_file_search_item_text_margin"
            android:text="Justin"
            android:textColor="@color/jandi_file_search_item_owner_text"
            android:textSize="@dimen/jandi_file_search_item_owner_text" />

        <ImageView
            android:id="@+id/img_searched_file_name_line_through"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_searched_file_owner_name"
            android:layout_alignLeft="@+id/txt_searched_file_owner_name"
            android:layout_alignRight="@+id/txt_searched_file_owner_name"
            android:layout_alignTop="@+id/txt_searched_file_owner_name"
            android:src="@drawable/line_gray" />

        <TextView
            android:id="@+id/txt_searched_file_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txt_searched_file_owner_name"
            android:layout_marginLeft="@dimen/jandi_file_search_item_text_margin"
            android:layout_toRightOf="@id/txt_searched_file_owner_name"
            android:text="Date"
            android:textColor="@color/jandi_file_search_item_type_text"
            android:textSize="@dimen/jandi_file_search_item_date_text" />
    </RelativeLayout>

</LinearLayout>
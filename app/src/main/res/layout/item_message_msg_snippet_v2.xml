<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ly_message_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/message_list_selector"
    android:descendantFocusability="blocksDescendants"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/jandi_messages_padding_left"
    android:paddingRight="25dp"
    android:paddingTop="5dp"
    android:visibility="visible">
    <!-- 사용자 프로필 사진 -->
    <ImageView
        android:id="@+id/img_message_user_profile"
        android:layout_width="@dimen/jandi_messages_profile_size"
        android:layout_height="@dimen/jandi_messages_profile_size"
        android:layout_marginRight="@dimen/jandi_messages_profile_margin_right"/>
    <!-- 기본 표시 레이어 -->

    <TextView
        android:id="@+id/txt_message_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/jandi_messages_default_margin_bottom"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/img_message_user_profile"
        android:ellipsize="end"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:text="User name"
        android:textColor="@color/jandi_messages_name"
        android:textSize="@dimen/jandi_messages_user_name"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/img_entity_listitem_line_through"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_message_user_name"
        android:layout_alignLeft="@+id/txt_message_user_name"
        android:layout_alignRight="@+id/txt_message_user_name"
        android:layout_alignTop="@+id/txt_message_user_name"
        android:src="@drawable/line_gray"/>

    <View
        android:id="@+id/view_entity_listitem_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_message_user_profile"
        android:layout_alignLeft="@+id/img_message_user_profile"
        android:layout_alignRight="@+id/img_message_user_profile"
        android:layout_alignTop="@+id/img_message_user_profile"
        android:background="#99ffffff"
        android:visibility="visible"/>

    <!-- 실제 메시지 내용 -->
    <TextView
        android:id="@+id/txt_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_message_user_name"
        android:layout_toRightOf="@+id/img_message_user_profile"
        android:focusable="false"
        android:text="Text"
        android:textColor="@color/jandi_messages_content"
        android:textSize="@dimen/jandi_messages_content"/>

    <RelativeLayout
        android:id="@+id/vg_snippet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_message_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_message_user_profile">

        <com.tosslab.jandi.app.views.AutoScaleImageView
            android:id="@+id/iv_snippet_thumb"
            android:layout_width="match_parent"
            android:layout_height="115dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_snippet_thumb"
            android:layout_alignTop="@id/iv_snippet_thumb"
            android:background="@drawable/bg_rect_gray"/>

        <View
            android:id="@+id/v_snippet_line"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/vg_snippet_summary"
            android:layout_alignTop="@+id/vg_snippet_summary"
            android:layout_below="@id/iv_snippet_thumb"
            android:layout_marginTop="8dp"
            android:background="#E6E6E6"/>

        <LinearLayout
            android:id="@+id/vg_snippet_summary"
            android:layout_below="@id/iv_snippet_thumb"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/v_snippet_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_snippet_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Rock Formation Image, Galapagos Islands - National bla blaa bla bla bla blab albalblablblbla"
                android:textColor="@android:color/black"
                android:textSize="17dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_snippet_domain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="National Geographic"
                android:textColor="#999999"
                android:textSize="11dp"/>

            <TextView
                android:id="@+id/tv_snippet_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Sunlight paints a rock formation in the world"
                android:textColor="@android:color/black"
                android:textSize="13dp"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

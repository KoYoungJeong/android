<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_upload_image"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <EditText
        android:id="@+id/et_file_name_to_be_uploaded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/edittext_vertical_margin"
        android:enabled="false"
        android:textColor="@color/black" />

    <Spinner
        android:id="@+id/spinner_cdps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/edittext_vertical_margin" />

    <EditText
        android:id="@+id/et_comment_with_file_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/edittext_vertical_margin"
        android:gravity="top"
        android:hint="@string/file_upload_comment"
        android:inputType="textMultiLine"
        android:lines="2">

        <requestFocus />
    </EditText>

</LinearLayout>
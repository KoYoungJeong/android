<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/jandi_entity_item_title_margin_left"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <View
        android:id="@+id/view_entity_listitem_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_topic_selector" />

    <ImageView
        android:id="@+id/img_entity_listitem_icon"
        android:layout_width="@dimen/jandi_entity_item_icon"
        android:layout_height="@dimen/jandi_entity_item_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/jandi_topic_icon" />

    <ImageView
        android:id="@+id/img_entity_listitem_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_entity_listitem_icon"
        android:layout_alignTop="@+id/img_entity_listitem_icon"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="-1dp"
        android:src="@drawable/jandi_icon_fav" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/vg_entity_listitem_badge"
        android:layout_toRightOf="@+id/img_entity_listitem_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.tosslab.jandi.app.views.FixedLinearLayout
            android:id="@+id/vg_entity_listitem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_entity_listitem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Topic Name"
                android:textColor="@color/jandi_text"
                android:textSize="@dimen/jandi_entity_item_title_font"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_entity_listitem_user_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:maxLines="1"
                android:text="(11)"
                android:textColor="@color/jandi_text"
                android:textSize="@dimen/jandi_entity_item_title_font"
                android:textStyle="bold" />

            <View
                android:id="@+id/v_push_off"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/icon_notification_off"
                android:visibility="gone" />
        </com.tosslab.jandi.app.views.FixedLinearLayout>

        <TextView
            android:id="@+id/tv_entity_listitem_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Descroption"
            android:textColor="@color/jandi_text_medium"
            android:textSize="@dimen/jandi_text_size_small" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/vg_entity_listitem_badge"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/txt_entity_listitem_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/jandi_badge_starred"
            android:gravity="center"
            android:minHeight="24dp"
            android:minWidth="24dp"
            android:text="0"
            android:textColor="@color/jandi_text_white"
            android:textSize="@dimen/jandi_entity_badge_font"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_entity_listitem_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/jandi_icon_information_modal" />
    </RelativeLayout>

</RelativeLayout>
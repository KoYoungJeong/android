<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jandi_material_grey_50"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/vg_chat_detail_starred"
        style="@style/JandiTopicDetail.Layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/jandi_starred"
            android:textColor="@color/jandi_text"
            android:textSize="@dimen/jandi_text_size_large" />

        <ImageView
            android:id="@+id/iv_chat_detail_starred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jandi_topic_starred_status" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/vg_chat_detail_leave"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/account_home_divide_line" />


        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/jandi_action_leave"
            android:textColor="@color/jandi_text"
            android:textSize="@dimen/jandi_text_size_large" />

    </RelativeLayout>


</LinearLayout>
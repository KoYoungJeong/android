<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/jandi_ask_kick_user_from_topic"
        android:textColor="@color/jandi_text"
        android:textSize="@dimen/jandi_text_size_larger_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_kick_user_topic_profile"
            android:layout_width="@dimen/jandi_entity_item_icon"
            android:layout_height="@dimen/jandi_entity_item_icon"
            android:layout_marginRight="17dp" />

        <TextView
            android:id="@+id/tv_kick_user_topic_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/jandi_text"
            android:textSize="@dimen/jandi_text_size_large"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
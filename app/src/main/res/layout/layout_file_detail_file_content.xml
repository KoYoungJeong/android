<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="169dp"
    android:background="@color/jandi_file_detail_tab_to_view_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_file_detail_mime_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/jandi_text_medium"
            android:textSize="12dp"/>

        <ImageView
            android:id="@+id/iv_file_detail_thumb"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginTop="6dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/taptoview"
            android:gravity="center"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:text="Tap to view"
            android:textColor="@color/jandi_text_medium"
            android:textSize="14dp"
            android:textStyle="bold"/>

    </LinearLayout>

</FrameLayout>

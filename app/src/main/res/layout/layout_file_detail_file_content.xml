<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vg_background"
    android:layout_width="match_parent"
    android:layout_height="169dp"
    android:background="@color/jandi_file_detail_tab_to_view_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_file_detail_thumb"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="fitCenter"
            android:src="@drawable/file_detail_etc" />

        <TextView
            android:id="@+id/tv_tab_to_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_round_rect_for_tab_to_view"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:paddingTop="3dp"
            android:text="Tap to view"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </LinearLayout>

</FrameLayout>

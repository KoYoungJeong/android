<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coach_mark_master_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_topic_detatil_guide_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="-15dp"
        android:src="@drawable/coachmark_img_detail" />

    <TextView
        android:layout_width="101dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_topic_detatil_guide_icon"
        android:layout_marginRight="8dp"
        android:gravity="top|right"
        android:shadowColor="@color/jandi_coach_mark_text_shadow"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/jandi_coach_mark_topic_setting"
        android:textColor="@color/jandi_coach_mark_text"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_topic_file_guide_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="-16dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/coachmark_img_file" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_topic_file_guide_icon"
        android:layout_marginRight="116dp"
        android:gravity="center|top"
        android:shadowColor="@color/jandi_coach_mark_text_shadow"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/jandi_coach_mark_topic_file_search"
        android:textColor="@color/jandi_coach_mark_text"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_topic_message_guide_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="103dp"
        android:layout_marginTop="-16dp"
        android:src="@drawable/coachmark_img_messege" />

    <TextView
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_topic_message_guide_icon"
        android:layout_marginRight="185dp"
        android:gravity="center|top"
        android:shadowColor="@color/jandi_coach_mark_text_shadow"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/jandi_coach_mark_topic_message_search"
        android:textColor="@color/jandi_coach_mark_text"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:shadowColor="@color/jandi_coach_mark_text_shadow"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="@string/jandi_coach_mark_topic_explain1"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:shadowColor="@color/jandi_coach_mark_text_shadow"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="@string/jandi_coach_mark_topic_explain2"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/coachmark_btn_check" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_topic_upload_guide_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="-22.3dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/coachmark_img_upload" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_above="@id/iv_topic_upload_guide_icon"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:gravity="bottom|left"
        android:shadowColor="@color/jandi_coach_mark_text_shadow"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/jandi_coach_mark_upload_file"
        android:textColor="@color/jandi_coach_mark_text"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_topic_sticker_guide_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-22.3dp"
        android:layout_marginRight="62.7dp"
        android:src="@drawable/coachmark_img_mention" />

    <TextView
        android:id="@+id/tv_topic_sticker_guide"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_above="@id/iv_topic_sticker_guide_icon"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="54dp"
        android:gravity="center"
        android:shadowColor="@color/jandi_coach_mark_text_shadow"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/jandi_mention_mentions"
        android:textColor="@color/jandi_coach_mark_text"
        android:textSize="14sp"
        android:textStyle="bold" />


</RelativeLayout>
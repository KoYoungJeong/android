<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="19dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/iv_starred_poll_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true" />

        <View
            android:id="@+id/v_starred_profile_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_starred_poll_profile"
            android:layout_alignEnd="@+id/iv_starred_poll_profile"
            android:layout_alignLeft="@+id/iv_starred_poll_profile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/iv_starred_poll_profile"
            android:layout_alignStart="@+id/iv_starred_poll_profile"
            android:layout_alignTop="@+id/iv_starred_poll_profile"
            android:layout_centerVertical="true"
            android:background="#66FFFFFF" />

        <TextView
            android:id="@+id/tv_starred_poll_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/iv_starred_poll_profile"
            android:layout_toLeftOf="@+id/tv_starred_poll_create_date"
            android:layout_toRightOf="@id/iv_starred_poll_profile"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Tee"
            android:textColor="@color/rgb_333333"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_starred_poll_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"

            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="2016/10/11 오전 10:40"
            android:textColor="@color/rgb_999999"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@id/tv_starred_poll_writer"
            android:layout_marginLeft="14.5dp"
            android:layout_marginStart="14.5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/iv_starred_poll_profile"
            android:layout_toRightOf="@id/iv_starred_poll_profile"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/poll_icon_normal_192" />

            <TextView
                android:id="@+id/tv_starred_poll_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:ellipsize="middle"
                android:lineSpacingExtra="3dp"
                android:maxLines="3"
                android:text="8098521308509823"
                android:textColor="@color/rgb_333333"
                android:textSize="13sp" />

        </LinearLayout>

    </RelativeLayout>


    <View
        android:id="@+id/v_full_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/rgb_e5e5e5"
        android:visibility="visible" />

    <View
        android:id="@+id/v_semi_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:background="@color/rgb_e5e5e5"
        android:visibility="visible" />
</RelativeLayout>
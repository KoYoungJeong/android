<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/vg_multi_share_file_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_multi_share_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/upload_arrow_left" />

            <ImageView
                android:id="@+id/iv_multi_share_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/upload_arrow_right" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_multi_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/vg_multi_share_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFDADADA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_multi_share_image_title"
                    style="@style/JandiMainShare.Content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vg_viwer"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="13dp"
                    android:layout_weight="6"
                    android:ellipsize="middle"
                    android:gravity="center_vertical"
                    android:hint="@string/jandi_topic_title_hint"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/rgb_999999"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_file_rename_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_rect_border_grey"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="4dp"
                    android:text="@string/common_fileupload_rename"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_multi_share_team_title"
                style="@style/JandiMainShare.Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Team"
                android:textColor="@color/jandi_text_light"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/vg_multi_share_team"
                style="@style/JandiMainShare.Content"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_multi_share_team_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dropdown_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="4dp"
                    android:background="#FFDADADA" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_multi_share_room_title"
                style="@style/JandiMainShare.Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Topic or message"
                android:textColor="@color/jandi_text_light"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/vg_multi_share_room"
                style="@style/JandiMainShare.Content"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_multi_share_room_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26dp"
                    android:hint="@string/jandi_menu_room_selection"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dropdown_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="4dp"
                    android:background="#FFDADADA" />
            </RelativeLayout>


            <AutoCompleteTextView
                android:id="@+id/et_multi_share_comment"
                style="@style/JandiMainShare.Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="start"
                android:hint="@string/file_upload_comment"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:scrollbars="vertical"
                android:textSize="16sp" />

            <View
                style="@style/JandiMainShare.Content"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#FFDADADA" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/iv_item_share_file_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />


    <LinearLayout
        android:id="@+id/vg_item_share_file_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_item_share_file_icon"
            android:layout_width="65dp"
            android:layout_height="65dp" />

        <TextView
            android:id="@+id/tv_item_share_file_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Google Docs"
            android:textColor="@color/white"
            android:textSize="@dimen/jandi_text_size_larger_3" />

    </LinearLayout>


</RelativeLayout>